<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Edit Profile - Stayzio</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <style>
    :root {
      --primary: #fe424d;
      --primary-light: #ff6b75;
      --primary-dark: #e63946;
      --border: #e5e7eb;
      --gray: #6b7280;
      --bg: #fafafa;
      --disabled-bg: #f3f4f6;
      --error: #dc2626;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: system-ui, -apple-system, sans-serif;
      background: linear-gradient(135deg, #fff 0%, #fef2f3 100%);
      min-height: 100vh;
      padding: 40px 20px;
    }

    .container {
      max-width: 700px;
      margin: 0 auto;
      background: white;
      padding: 40px;
      border-radius: 20px;
      box-shadow: 0 10px 40px rgba(0,0,0,0.08);
      animation: fadeIn 0.5s ease;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    h2 {
      font-size: 32px;
      margin-bottom: 10px;
      font-weight: 700;
      background: linear-gradient(135deg, var(--primary), var(--primary-dark));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .subtitle {
      color: var(--gray);
      margin-bottom: 30px;
      font-size: 15px;
    }

    .form-group {
      margin-bottom: 22px;
    }

    label {
      font-weight: 600;
      display: block;
      margin-bottom: 8px;
      color: #374151;
      font-size: 14px;
    }

    input,
    textarea {
      width: 100%;
      padding: 14px 16px;
      border-radius: 10px;
      border: 2px solid var(--border);
      font-size: 15px;
      transition: all 0.3s ease;
      font-family: inherit;
    }

    input:focus,
    textarea:focus {
      outline: none;
      border-color: var(--primary);
      box-shadow: 0 0 0 4px rgba(254,66,77,0.1);
    }

    input:disabled {
      background: var(--disabled-bg);
      color: var(--gray);
      cursor: not-allowed;
      opacity: 0.7;
    }

    input.error,
    textarea.error {
      border-color: var(--error);
    }

    input.error:focus,
    textarea.error:focus {
      box-shadow: 0 0 0 4px rgba(220, 38, 38, 0.1);
    }

    .error-message {
      color: var(--error);
      font-size: 13px;
      margin-top: 6px;
      display: none;
      align-items: center;
      gap: 4px;
    }

    .error-message.show {
      display: flex;
    }

    textarea {
      resize: vertical;
      min-height: 130px;
    }

    /* Email field styling */
    .email-field-wrapper {
      position: relative;
    }

    .email-lock-icon {
      position: absolute;
      right: 16px;
      top: 50%;
      transform: translateY(-50%);
      color: var(--gray);
      font-size: 16px;
      pointer-events: none;
    }

    .email-note {
      font-size: 13px;
      color: var(--gray);
      margin-top: 6px;
      display: flex;
      align-items: center;
      gap: 6px;
    }

    .email-note i {
      font-size: 12px;
    }

    /* Photo Upload */
    .photo-wrapper {
      display: flex;
      align-items: center;
      gap: 24px;
      flex-wrap: wrap;
    }

    .profile-img-container {
      position: relative;
    }

    .profile-img {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      object-fit: cover;
      box-shadow: 0 4px 15px rgba(0,0,0,0.15);
      border: 4px solid white;
      cursor: pointer;
      transition: transform 0.3s ease;
    }

    .profile-img:hover {
      transform: scale(1.05);
    }

    .upload-overlay {
      position: absolute;
      inset: 0;
      border-radius: 50%;
      background: rgba(0,0,0,0.5);
      display: flex;
      align-items: center;
      justify-content: center;
      opacity: 0;
      transition: opacity 0.3s ease;
      cursor: pointer;
      pointer-events: none;
    }

    .profile-img-container:hover .upload-overlay {
      opacity: 1;
    }

    .upload-overlay i {
      color: white;
      font-size: 24px;
    }

    .file-input-wrapper {
      display: flex;
      flex-direction: column;
      gap: 8px;
    }

    .file-input-btn {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      padding: 12px 24px;
      background: white;
      border: 2px solid var(--primary);
      color: var(--primary);
      border-radius: 10px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      font-size: 14px;
    }

    .file-input-btn:hover {
      background: var(--primary);
      color: white;
      transform: translateY(-2px);
    }

    #photoInput {
      display: none;
    }

    .file-info {
      font-size: 13px;
      color: var(--gray);
    }

    /* Buttons */
    .submit-btn {
      width: 100%;
      background: linear-gradient(135deg, var(--primary), var(--primary-light));
      padding: 16px;
      border-radius: 12px;
      border: none;
      font-size: 18px;
      font-weight: 700;
      color: white;
      cursor: pointer;
      margin-top: 30px;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
    }

    .submit-btn:hover {
      transform: translateY(-3px);
      box-shadow: 0 12px 30px rgba(254, 66, 77, 0.3);
    }

    .submit-btn:active {
      transform: translateY(-1px);
    }

    .back-btn {
      display: block;
      margin-top: 16px;
      text-align: center;
      color: var(--primary);
      font-weight: 600;
      text-decoration: none;
      padding: 12px;
      transition: all 0.3s ease;
      border-radius: 8px;
    }

    .back-btn:hover {
      background: rgba(254, 66, 77, 0.05);
    }

    /* Image Modal */
    .image-modal {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.9);
      z-index: 1000;
      align-items: center;
      justify-content: center;
      animation: fadeIn 0.3s ease;
    }

    .image-modal.active {
      display: flex;
    }

    .modal-content {
      position: relative;
      max-width: 90%;
      max-height: 90%;
      animation: scaleIn 0.3s ease;
    }

    @keyframes scaleIn {
      from {
        transform: scale(0.8);
        opacity: 0;
      }
      to {
        transform: scale(1);
        opacity: 1;
      }
    }

    .modal-image {
      max-width: 100%;
      max-height: 90vh;
      border-radius: 10px;
      box-shadow: 0 20px 60px rgba(0,0,0,0.5);
    }

    .modal-close {
      position: absolute;
      top: -40px;
      right: 0;
      background: white;
      color: #333;
      width: 40px;
      height: 40px;
      border-radius: 50%;
      border: none;
      font-size: 24px;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.3s ease;
    }

    .modal-close:hover {
      background: var(--primary);
      color: white;
      transform: rotate(90deg);
    }

    /* Responsive */
    @media (max-width: 640px) {
      .container {
        padding: 24px;
      }

      h2 {
        font-size: 26px;
      }

      .photo-wrapper {
        flex-direction: column;
        align-items: flex-start;
      }
    }
  </style>
</head>

<body>
  <div class="container">
    <h2><i class="fas fa-user-edit"></i> Edit Profile</h2>
    <p class="subtitle">Update your personal details and profile image.</p>

    <form action="/profile/edit" method="POST" enctype="multipart/form-data">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">

      <!-- Profile Photo -->
      <div class="form-group">
        <label><i class="fas fa-camera"></i> Profile Photo</label>
        <div class="photo-wrapper">
          <div class="profile-img-container">
            <img 
              id="previewImg"
              class="profile-img" 
              src="<%= user.profile?.photo?.url || '/images/default-profile.png' %>"
              alt="Profile Photo"
            >
            <label for="photoInput" class="upload-overlay">
              <i class="fas fa-camera"></i>
            </label>
          </div>

          <div class="file-input-wrapper">
            <label for="photoInput" class="file-input-btn">
              <i class="fas fa-upload"></i>
              <span>Choose Photo</span>
            </label>
            <input type="file" name="photo" id="photoInput" accept="image/*">
            <span class="file-info" id="fileName">No file chosen</span>
          </div>
        </div>
      </div>

      <!-- Name -->
      <div class="form-group">
        <label><i class="fas fa-user"></i> Full Name</label>
        <input 
          type="text" 
          name="name" 
          id="nameInput"
          value="<%= user.profile?.name || '' %>"
          placeholder="Enter your full name"
          required
          minlength="2"
          maxlength="100"
        >
        <div class="error-message" id="nameError">
          <i class="fas fa-exclamation-circle"></i>
          <span>Name must be between 2 and 100 characters</span>
        </div>
      </div>

      <!-- Email (Disabled) -->
      <div class="form-group">
        <label><i class="fas fa-envelope"></i> Email Address</label>
        <div class="email-field-wrapper">
          <input 
            type="email" 
            name="email" 
            value="<%= user.email || '' %>"
            placeholder="Enter your email"
            disabled
            readonly
          >
          <i class="fas fa-lock email-lock-icon"></i>
        </div>
        <p class="email-note">
          <i class="fas fa-info-circle"></i>
          Email cannot be changed for security reasons
        </p>
      </div>

      <!-- Address -->
      <div class="form-group">
        <label><i class="fas fa-map-marker-alt"></i> Address</label>
        <input 
          type="text" 
          name="address" 
          id="addressInput"
          value="<%= user.profile?.address || '' %>"
          placeholder="Enter your street address"
          minlength="5"
          maxlength="200"
        >
        <div class="error-message" id="addressError">
          <i class="fas fa-exclamation-circle"></i>
          <span>Address must be between 5 and 200 characters</span>
        </div>
      </div>

      <!-- Country -->
      <div class="form-group">
        <label><i class="fas fa-globe"></i> Country</label>
        <input 
          type="text" 
          name="country" 
          id="countryInput"
          value="<%= user.profile?.country || '' %>"
          placeholder="Enter your country"
          required
          minlength="2"
          maxlength="100"
          pattern="[A-Za-z\s]+"
        >
        <div class="error-message" id="countryError">
          <i class="fas fa-exclamation-circle"></i>
          <span>Country must contain only letters (2-100 characters)</span>
        </div>
      </div>

      <!-- Phone -->
      <div class="form-group">
        <label><i class="fas fa-phone"></i> Phone Number</label>
        <input 
          type="tel" 
          name="phone" 
          id="phoneInput"
          value="<%= user.profile?.phone || '' %>"
          placeholder="Enter your phone number"
          pattern="[\d\+\-\s\(\)]+"
          minlength="10"
          maxlength="20"
        >
        <div class="error-message" id="phoneError">
          <i class="fas fa-exclamation-circle"></i>
          <span>Phone must be 10-20 digits (can include +, -, spaces, parentheses)</span>
        </div>
      </div>

      <!-- Bio -->
      <div class="form-group">
        <label><i class="fas fa-pen"></i> Bio</label>
        <textarea 
          name="bio" 
          id="bioInput"
          placeholder="Tell us something about yourself..."
          maxlength="500"
        ><%= user.profile?.bio || '' %></textarea>
        <div class="error-message" id="bioError">
          <i class="fas fa-exclamation-circle"></i>
          <span>Bio must not exceed 500 characters</span>
        </div>
      </div>

      <button type="submit" class="submit-btn">
        <i class="fas fa-save"></i> 
        <span>Update Profile</span>
      </button>

      <a href="/profile" class="back-btn">
        <i class="fas fa-arrow-left"></i> Cancel & Go Back
      </a>
    </form>
  </div>

  <!-- Image Modal -->
  <div class="image-modal" id="imageModal">
    <div class="modal-content">
      <button class="modal-close" id="modalClose">
        <i class="fas fa-times"></i>
      </button>
      <img class="modal-image" id="modalImage" src="" alt="Profile Photo">
    </div>
  </div>

  <!-- Image Preview Script -->
  <script>
    const photoInput = document.getElementById("photoInput");
    const previewImg = document.getElementById("previewImg");
    const fileName = document.getElementById("fileName");
    const imageModal = document.getElementById("imageModal");
    const modalImage = document.getElementById("modalImage");
    const modalClose = document.getElementById("modalClose");
    const form = document.querySelector("form");

    // Image upload preview
    photoInput.addEventListener("change", (e) => {
      const file = e.target.files[0];
      if (file) {
        if (file.size > 5 * 1024 * 1024) {
          alert("File size must be less than 5MB");
          photoInput.value = "";
          return;
        }
        
        if (!file.type.startsWith("image/")) {
          alert("Please select a valid image file");
          photoInput.value = "";
          return;
        }
        
        previewImg.src = URL.createObjectURL(file);
        fileName.textContent = file.name;
        fileName.style.color = "var(--primary)";
      } else {
        fileName.textContent = "No file chosen";
        fileName.style.color = "var(--gray)";
      }
    });

    // Image modal functionality
    previewImg.addEventListener("click", () => {
      modalImage.src = previewImg.src;
      imageModal.classList.add("active");
      document.body.style.overflow = "hidden";
    });

    modalClose.addEventListener("click", closeModal);
    
    imageModal.addEventListener("click", (e) => {
      if (e.target === imageModal) {
        closeModal();
      }
    });

    function closeModal() {
      imageModal.classList.remove("active");
      document.body.style.overflow = "auto";
    }

    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape" && imageModal.classList.contains("active")) {
        closeModal();
      }
    });

    // Form validation
    const nameInput = document.getElementById("nameInput");
    const addressInput = document.getElementById("addressInput");
    const countryInput = document.getElementById("countryInput");
    const phoneInput = document.getElementById("phoneInput");
    const bioInput = document.getElementById("bioInput");

    const nameError = document.getElementById("nameError");
    const addressError = document.getElementById("addressError");
    const countryError = document.getElementById("countryError");
    const phoneError = document.getElementById("phoneError");
    const bioError = document.getElementById("bioError");

    function validateField(input, errorElement, validationFn) {
      input.addEventListener("blur", () => {
        if (input.value && !validationFn(input.value)) {
          input.classList.add("error");
          errorElement.classList.add("show");
        } else {
          input.classList.remove("error");
          errorElement.classList.remove("show");
        }
      });

      input.addEventListener("input", () => {
        if (input.classList.contains("error")) {
          if (!input.value || validationFn(input.value)) {
            input.classList.remove("error");
            errorElement.classList.remove("show");
          }
        }
      });
    }

    // Name validation
    validateField(nameInput, nameError, (val) => {
      return val.length >= 2 && val.length <= 100;
    });

    // Address validation
    validateField(addressInput, addressError, (val) => {
      return !val || (val.length >= 5 && val.length <= 200);
    });

    // Country validation
    validateField(countryInput, countryError, (val) => {
      return val.length >= 2 && val.length <= 100 && /^[A-Za-z\s]+$/.test(val);
    });

    // Phone validation
    validateField(phoneInput, phoneError, (val) => {
      return !val || (val.length >= 10 && val.length <= 20 && /^[\d\+\-\s\(\)]+$/.test(val));
    });

    // Bio validation
    validateField(bioInput, bioError, (val) => {
      return !val || val.length <= 500;
    });

    // Form submission validation
    form.addEventListener("submit", (e) => {
      let isValid = true;

      // Validate name
      if (!nameInput.value || nameInput.value.length < 2 || nameInput.value.length > 100) {
        nameInput.classList.add("error");
        nameError.classList.add("show");
        isValid = false;
      }

      // Validate country
      if (!countryInput.value || countryInput.value.length < 2 || countryInput.value.length > 100 || !/^[A-Za-z\s]+$/.test(countryInput.value)) {
        countryInput.classList.add("error");
        countryError.classList.add("show");
        isValid = false;
      }

      // Validate address if provided
      if (addressInput.value && (addressInput.value.length < 5 || addressInput.value.length > 200)) {
        addressInput.classList.add("error");
        addressError.classList.add("show");
        isValid = false;
      }

      // Validate phone if provided
      if (phoneInput.value && (phoneInput.value.length < 10 || phoneInput.value.length > 20 || !/^[\d\+\-\s\(\)]+$/.test(phoneInput.value))) {
        phoneInput.classList.add("error");
        phoneError.classList.add("show");
        isValid = false;
      }

      // Validate bio if provided
      if (bioInput.value && bioInput.value.length > 500) {
        bioInput.classList.add("error");
        bioError.classList.add("show");
        isValid = false;
      }

      if (!isValid) {
        e.preventDefault();
        const firstError = document.querySelector(".error");
        if (firstError) {
          firstError.scrollIntoView({ behavior: "smooth", block: "center" });
        }
      }
    });
  </script>
</body>
</html>