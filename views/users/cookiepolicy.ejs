    <script>
        // Cookie preference management
        function saveCookiePreferences() {
            // Get all toggle states
            const toggles = document.querySelectorAll('.toggle-switch input[type="checkbox"]');
            const preferences = {};
            
            toggles.forEach((toggle, index) => {
                const categories = ['essential', 'performance', 'functional', 'marketing'];
                preferences[categories[index]] = toggle.checked;
            });
            
            // Store preferences (in a real implementation, this would save to your backend)
            console.log('Cookie preferences saved:', preferences);
            
            // Show confirmation
            alert('Your cookie preferences have been saved successfully!');
        }

        function acceptAllCookies() {
            // Enable all toggles except essential (which is already disabled/checked)
            const toggles = document.querySelectorAll('.toggle-switch input[type="checkbox"]:not([disabled])');
            toggles.forEach(toggle => {
                toggle.checked = true;
            });
            
            saveCookiePreferences();
        }

        function rejectAllCookies() {
            // Disable all non-essential toggles
            const toggles = document.querySelectorAll('.toggle-switch input[type="checkbox"]:not([disabled])');
            toggles.forEach(toggle => {
                toggle.checked = false;
            });
            
            saveCookiePreferences();
        }

        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Add animation on scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        // Observe all sections
        document.querySelectorAll('.section').forEach(section => {
            section.style.opacity = '0';
            section.style.transform = 'translateY(20px)';
            section.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
            observer.observe(section);
        });
    </script>
