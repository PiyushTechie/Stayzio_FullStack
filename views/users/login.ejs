<% layout("/layouts/boilerplate") %>

<div class="form-container">
  <h1>Login</h1>

  <form id="loginForm" action="/login" method="POST" class="needs-validation" novalidate>
    <div class="form-group">
      <label for="email">Email</label>
      <input 
        type="email" 
        id="email" 
        name="username" 
        required 
        placeholder="Enter your email"
        class="form-control"
      >
    </div>

    <div class="form-group">
      <label for="password">Password</label>
      <input 
        type="password" 
        id="password" 
        name="password" 
        required 
        placeholder="Enter your password"
        class="form-control"
      >
    </div>

    <div class="text-right mb-3">
      <a href="/forgot-password" class="custom-link">Forgot password?</a>
    </div>

    <!-- Button: shows Login by default, spinner on submit -->
    <button type="submit" id="loginBtn">
      <span class="btn-text">Login</span>
      <div class="spinner hidden"></div>
    </button>
  </form>

  <p class="signup-link">Don't have an account? <a href="/signup">Sign up here</a></p>
</div>

<script>
  const loginForm = document.getElementById("loginForm");
  const loginBtn = document.getElementById("loginBtn");
  const btnText = loginBtn.querySelector(".btn-text");
  const spinner = loginBtn.querySelector(".spinner");

  loginForm.addEventListener("submit", () => {
    btnText.style.display = "none";       // hide the Login text
    spinner.classList.remove("hidden");   // show spinner
    loginBtn.disabled = true;             // disable button
  });
</script>
