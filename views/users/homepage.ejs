    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
            color: #1e293b;
            overflow-x: hidden;
            line-height: 1.6;
        }

        /* Navigation */
        nav {
            position: fixed;
            top: 0;
            width: 100%;
            padding: 20px 50px;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            z-index: 1000;
            transition: all 0.3s ease;
            box-shadow: 0 2px 20px rgba(0, 0, 0, 0.05);
            border-bottom: 1px solid rgba(254, 66, 77, 0.1);
        }

        .nav-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 1400px;
            margin: 0 auto;
        }

        .logo {
            font-size: 28px;
            font-weight: 800;
            background: linear-gradient(135deg, #fe424d, #ff6b73);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .brand-icon {
            color: #fe424d;
            font-size: 24px;
        }

        .nav-links {
            display: flex;
            gap: 40px;
            list-style: none;
        }

        .nav-links a {
            color: #475569;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
            position: relative;
            padding: 8px 0;
        }

        .nav-links a:hover {
            color: #fe424d;
        }

        .nav-links a::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 0;
            height: 2px;
            background: linear-gradient(135deg, #fe424d, #ff6b73);
            transition: width 0.3s ease;
        }

        .nav-links a:hover::after {
            width: 100%;
        }

        .cta-button {
            background: linear-gradient(135deg, #fe424d, #ff6b73);
            color: white;
            padding: 12px 24px;
            border: none;
            border-radius: 50px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
            box-shadow: 0 4px 15px rgba(254, 66, 77, 0.2);
        }

        .cta-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(254, 66, 77, 0.3);
        }

        /* Hero Section */
        .hero {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            position: relative;
            background: linear-gradient(135deg, #ffffff 0%, #fef7f7 50%, #ffffff 100%);
            background-size: 400% 400%;
            animation: gradientShift 10s ease infinite;
        }

        @keyframes gradientShift {
            0%, 100% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
        }

        .hero-content {
            max-width: 900px;
            z-index: 2;
            animation: fadeInUp 1s ease;
            padding: 0 20px;
        }

        .hero h1 {
            font-size: clamp(3rem, 8vw, 6rem);
            font-weight: 900;
            margin-bottom: 20px;
            background: linear-gradient(135deg, #1e293b, #fe424d);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            line-height: 1.1;
        }

        .hero p {
            font-size: 1.3rem;
            margin-bottom: 40px;
            color: #64748b;
            line-height: 1.6;
        }

        .hero-buttons {
            display: flex;
            gap: 20px;
            justify-content: center;
            flex-wrap: wrap;
        }

        .primary-btn {
            background: linear-gradient(135deg, #fe424d, #ff6b73);
            color: white;
            padding: 18px 40px;
            border: none;
            border-radius: 50px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
            box-shadow: 0 6px 20px rgba(254, 66, 77, 0.3);
        }

        .primary-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(254, 66, 77, 0.4);
        }

        .secondary-btn {
            background: transparent;
            color: #fe424d;
            padding: 18px 40px;
            border: 2px solid #fe424d;
            border-radius: 50px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }

        .secondary-btn:hover {
            background: #fe424d;
            color: white;
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(254, 66, 77, 0.3);
        }

        /* Floating Elements */
        .floating-card {
            position: absolute;
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(254, 66, 77, 0.1);
            border-radius: 20px;
            padding: 20px;
            animation: float 6s ease-in-out infinite;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        }

        .floating-card-1 {
            top: 20%;
            left: 10%;
            animation-delay: 0s;
        }

        .floating-card-2 {
            top: 30%;
            right: 10%;
            animation-delay: 2s;
        }

        .floating-card-3 {
            bottom: 20%;
            left: 5%;
            animation-delay: 4s;
        }

        /* Features Section */
        .features {
            padding: 100px 50px;
            max-width: 1400px;
            margin: 0 auto;
            background: #ffffff;
        }

        .features h2 {
            text-align: center;
            font-size: 3rem;
            font-weight: 800;
            margin-bottom: 60px;
            background: linear-gradient(135deg, #1e293b, #fe424d);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 40px;
        }

        .feature-card {
            background: #ffffff;
            border: 1px solid rgba(254, 66, 77, 0.1);
            border-radius: 24px;
            padding: 40px;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        }

        .feature-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 3px;
            background: linear-gradient(90deg, #fe424d, #ff6b73);
            transform: translateX(-100%);
            transition: transform 0.3s ease;
        }

        .feature-card:hover::before {
            transform: translateX(0);
        }

        .feature-card:hover {
            transform: translateY(-10px);
            border-color: rgba(254, 66, 77, 0.3);
            box-shadow: 0 20px 60px rgba(254, 66, 77, 0.1);
        }

        .feature-icon {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, #fe424d, #ff6b73);
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            margin-bottom: 20px;
        }

        .feature-icon svg {
            width: 28px;
            height: 28px;
            fill: white;
        }

        .feature-card h3 {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 15px;
            color: #1e293b;
        }

        .feature-card p {
            color: #64748b;
            line-height: 1.6;
        }

        /* Stats Section */
        .stats {
            padding: 80px 50px;
            background: linear-gradient(135deg, #fef7f7, #ffffff);
        }

        .stats-container {
            max-width: 1200px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 40px;
            text-align: center;
        }

        .stat-item {
            padding: 30px 20px;
            background: white;
            border-radius: 20px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
            border: 1px solid rgba(254, 66, 77, 0.1);
            transition: all 0.3s ease;
        }

        .stat-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(254, 66, 77, 0.1);
        }

        .stat-item h3 {
            font-size: 3rem;
            font-weight: 900;
            color: #fe424d;
            margin-bottom: 10px;
        }

        .stat-item p {
            font-size: 1.1rem;
            color: #64748b;
            font-weight: 500;
        }

        /* CTA Section */
        .final-cta {
            padding: 100px 50px;
            text-align: center;
            background: linear-gradient(135deg, #fe424d, #ff6b73);
            color: white;
        }

        .final-cta h2 {
            font-size: 3rem;
            font-weight: 800;
            margin-bottom: 20px;
        }

        .final-cta p {
            font-size: 1.3rem;
            margin-bottom: 40px;
            opacity: 0.9;
        }

        .final-cta-btn {
            background: white;
            color: #fe424d;
            padding: 20px 50px;
            border: none;
            border-radius: 50px;
            font-size: 1.2rem;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
        }

        .final-cta-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        }

        /* Animations */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes float {
            0%, 100% {
                transform: translateY(0px);
            }
            50% {
                transform: translateY(-20px);
            }
        }

        /* Footer */
        footer {
            background: #f8fafc;
            padding: 80px 50px 40px;
            border-top: 1px solid rgba(254, 66, 77, 0.1);
        }

        .footer-content {
            max-width: 1400px;
            margin: 0 auto;
        }

        .footer-grid {
            display: grid;
            grid-template-columns: 2fr 1fr 1fr 1fr 1fr;
            gap: 60px;
            margin-bottom: 50px;
        }

        .footer-brand {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .footer-brand .logo {
            font-size: 32px;
            margin-bottom: 10px;
        }

        .footer-brand p {
            color: #64748b;
            line-height: 1.6;
            margin-bottom: 20px;
        }

        .social-links {
            display: flex;
            gap: 15px;
        }

        .social-links a {
            width: 40px;
            height: 40px;
            background: rgba(254, 66, 77, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #fe424d;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .social-links a:hover {
            background: #fe424d;
            color: white;
            transform: translateY(-2px);
        }

        .footer-column h4 {
            font-size: 1.2rem;
            font-weight: 700;
            margin-bottom: 25px;
            color: #fe424d;
        }

        .footer-column ul {
            list-style: none;
        }

        .footer-column li {
            margin-bottom: 12px;
        }

        .footer-column a {
            color: #64748b;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .footer-column a:hover {
            color: #fe424d;
        }

        .footer-bottom {
            padding-top: 30px;
            border-top: 1px solid rgba(254, 66, 77, 0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 20px;
        }

        .footer-bottom p {
            color: #64748b;
        }

        .footer-legal {
            display: flex;
            gap: 30px;
        }

        .footer-legal a {
            color: #64748b;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .footer-legal a:hover {
            color: #fe424d;
        }

        /* Mobile Menu */
        .mobile-menu-btn {
            display: none;
            background: none;
            border: none;
            color: #475569;
            font-size: 1.5rem;
            cursor: pointer;
        }

        .mobile-menu {
            position: fixed;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100vh;
            background: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(20px);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            gap: 40px;
            transition: left 0.3s ease;
            z-index: 999;
        }

        .mobile-menu.active {
            left: 0;
        }

        .mobile-menu a {
            color: #1e293b;
            text-decoration: none;
            font-size: 1.5rem;
            font-weight: 600;
        }

        .mobile-close {
            position: absolute;
            top: 30px;
            right: 30px;
            background: none;
            border: none;
            color: #1e293b;
            font-size: 2rem;
            cursor: pointer;
        }

        /* Responsive */
        @media (max-width: 1024px) {
            .floating-card-1, .floating-card-2, .floating-card-3 {
                display: none;
            }

            .footer-grid {
                grid-template-columns: repeat(3, 1fr);
                gap: 40px;
            }

            .footer-brand {
                grid-column: 1 / -1;
                text-align: center;
                margin-bottom: 20px;
            }
        }

        @media (max-width: 768px) {
            nav {
                padding: 15px 20px;
            }

            .nav-links {
                display: none;
            }

            .mobile-menu-btn {
                display: block;
            }

            .hero {
                padding: 0 20px;
                min-height: 100vh;
                justify-content: center;
            }

            .hero h1 {
                font-size: clamp(2.5rem, 10vw, 4rem);
            }

            .hero p {
                font-size: 1.1rem;
            }

            .hero-buttons {
                flex-direction: column;
                align-items: center;
                gap: 15px;
            }

            .primary-btn, .secondary-btn {
                width: 280px;
                text-align: center;
            }

            .features {
                padding: 60px 20px;
            }

            .features h2 {
                font-size: 2.5rem;
            }

            .features-grid {
                grid-template-columns: 1fr;
                gap: 30px;
            }

            .feature-card {
                padding: 30px 25px;
            }

            .stats {
                padding: 60px 20px;
            }

            .stats-container {
                grid-template-columns: repeat(2, 1fr);
                gap: 30px;
            }

            .stat-item h3 {
                font-size: 2.5rem;
            }

            .final-cta {
                padding: 60px 20px;
            }

            .final-cta h2 {
                font-size: 2.5rem;
            }

            .final-cta p {
                font-size: 1.1rem;
            }

            footer {
                padding: 60px 20px 30px;
            }

            .footer-grid {
                grid-template-columns: 1fr;
                gap: 40px;
                text-align: center;
            }

            .footer-brand {
                text-align: center;
            }

            .footer-bottom {
                flex-direction: column;
                text-align: center;
                gap: 15px;
            }

            .footer-legal {
                justify-content: center;
            }
        }

        @media (max-width: 480px) {
            .hero h1 {
                font-size: 2.5rem;
            }

            .features h2, .final-cta h2 {
                font-size: 2rem;
            }

            .feature-card {
                padding: 25px 20px;
            }

            .stats-container {
                grid-template-columns: 1fr;
                gap: 25px;
            }

            .primary-btn, .secondary-btn {
                width: 100%;
                max-width: 300px;
            }

            .footer-legal {
                flex-direction: column;
                gap: 15px;
            }
        }
    </style>
</head>
