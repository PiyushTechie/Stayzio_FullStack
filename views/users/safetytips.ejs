    <div class="container">
        <!-- Safety Tips Section -->
        <section class="section">
            <div class="section-header">
                <h2 class="section-title">Essential Safety Guidelines</h2>
                <p class="section-subtitle">Follow these comprehensive safety tips before, during, and after your stay to ensure maximum security and peace of mind.</p>
            </div>

            <div class="tips-grid">
                <!-- Before Travel -->
                <div class="tip-card before animate-on-scroll">
                    <div class="tip-header">
                        <span class="tip-icon">📋</span>
                        <span class="tip-category">Before Travel</span>
