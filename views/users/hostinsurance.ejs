            transform: translateY(-4px);
            box-shadow: 0 8px 30px rgba(254, 66, 77, 0.15);
        }

        .card h3 {
            color: #fe424d;
            margin-bottom: 1rem;
            font-size: 1.4rem;
        }

        .card-content {
            margin-bottom: 1.5rem;
        }

        .examples {
            background: #f8f9fa;
            padding: 1.5rem;
            border-radius: 12px;
            margin-top: 1rem;
        }

        .examples-title {
            font-weight: 600;
            color: #333;
            margin-bottom: 0.8rem;
            font-size: 0.95rem;
        }

