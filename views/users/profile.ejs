<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= user.username %> - Profile</title>
  <!-- Bootstrap & FontAwesome -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/profile.css">
</head>
<body>
  
  <!-- Profile Hero Section -->
  <section class="profile-hero">
    <div class="container-fluid">
      <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
          <div class="text-center">
            <div class="profile-avatar">
              <i class="fas fa-user"></i>
            </div>
            <h1 class="profile-title"><%= user.username %></h1>
            
            <% if (isOwner) { %>
              <p class="profile-email">
                <i class="fas fa-envelope me-2"></i><%= user.email %>
              </p>
              
              <!-- Action Buttons -->
              <div class="d-flex justify-content-center flex-wrap">
                <a href="/listings/new" class="btn-primary-custom">
                  <i class="fas fa-plus"></i>Add Listing
                </a>
                <a href="/bookings/my" class="btn-primary-custom">
                  <i class="fas fa-calendar-check"></i>My Bookings
                </a>
                <a href="/host" class="btn-primary-custom">
                  <i class="fa-solid fa-chart-line"></i>Track your Listings
                </a>
                <a href="/logout" class="btn-outline-custom">
                  <i class="fas fa-sign-out-alt"></i>Logout
                </a>
                <button type="button" id="deleteAccountBtn" class="btn-outline-custom">
              <i class="fa-solid fa-user-slash"></i> Delete Account
              </button>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="stats-section">
    <div class="container-fluid">
      <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
          <div class="stats-card">
            <div class="row">
              <div class="col-6">
                <div class="stat-item">
                  <div class="stat-number"><%= user.listings ? user.listings.length : 0 %></div>
                  <div class="stat-label">Listings</div>
                </div>
              </div>
              <div class="col-6">
                <div class="stat-item">
                  <div class="stat-number"><%= user.reviews ? user.reviews.length : 0 %></div>
                  <div class="stat-label">Reviews</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Content Section -->
  <section class="content-section">
    <div class="container-fluid">
      <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-8">
          
          <!-- Listings Section -->
          <div class="section-card fade-in">
            <h4 class="section-title">
              <i class="fas fa-home"></i>
              <%= isOwner ? "My Listings" : (user.username + "'s Listings") %>
            </h4>
            
            <% if (user.listings && user.listings.length > 0) { %>
              <div class="row g-4">
                <% user.listings.forEach((listing) => { %>
                  <div class="col-lg-6">
                    <div class="listing-card p-4">
                      <div class="d-flex justify-content-between align-items-start mb-3">
                        <h5 class="listing-title mb-0"><%= listing.title %></h5>
                        <span class="badge-active">Active</span>
                      </div>
                      <div class="listing-location mb-3">
                        <i class="fas fa-map-marker-alt text-danger"></i>
                        <span><%= listing.location %></span>
                      </div>
                      <div class="d-flex justify-content-between align-items-center mt-auto">
                        <small class="text-muted">
                          <i class="fas fa-calendar me-1"></i>
                          Listed recently
                        </small>
                        <a href="/listings/<%= listing._id %>" class="btn-view">
                          <i class="fas fa-eye"></i>View Details
                        </a>
                      </div>
                    </div>
                  </div>
                <% }) %>
              </div>
            <% } else { %>
              <div class="empty-state">
                <i class="fas fa-home"></i>
                <p><%= isOwner ? "Ready to share your space? Add your first listing!" : "No listings to show yet." %></p>
                <% if (isOwner) { %>
                  <a href="/listings/new" class="btn-create">
                    </i>Create First Listing
                  </a>
                <% } %>
              </div>
            <% } %>
          </div>

          <!-- Reviews Section -->
          <div class="section-card fade-in">
            <h4 class="section-title">
              <i class="fas fa-star"></i>
              <%= isOwner ? "My Reviews" : (user.username + "'s Reviews") %>
            </h4>
            
            <% if (user.reviews && user.reviews.length > 0) { %>
              <div class="row g-3">
                <% user.reviews.forEach((review) => { %>
                  <div class="col-12">
                    <div class="review-card p-4">
                      <div class="d-flex justify-content-between align-items-start">
                        <div class="flex-grow-1">
                          <div class="star-rating mb-2">
                            <% for (let i = 1; i <= 5; i++) { %>
                              <span class="star <%= i <= review.rating ? '' : 'empty' %>">â˜…</span>
                            <% } %>
                          </div>
                          <p class="mb-2"><%= review.comment %></p>
                          <small class="text-muted">
                            <i class="fas fa-clock me-1"></i>
                            Recently reviewed
                          </small>
                        </div>
                        <a href="/listings/<%= review.listing %>" class="btn-view ms-3">
                          <i class="fas fa-external-link-alt"></i>View Listing
                        </a>
                      </div>
                    </div>
                  </div>
                <% }) %>
              </div>
            <% } else { %>
              <div class="empty-state">
                <i class="fas fa-star"></i>
                <p><%= isOwner ? "Share your experiences! Write your first review." : "No reviews to display yet." %></p>
              </div>
            <% } %>
          </div>

        </div>
      </div>
    </div>
  </section>

  <script>
    // Smooth scroll animation for cards
    document.addEventListener('DOMContentLoaded', function() {
      const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
      };

      const observer = new IntersectionObserver(function(entries) {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
          }
        });
      }, observerOptions);

      const fadeElements = document.querySelectorAll('.fade-in');
      fadeElements.forEach(el => observer.observe(el));

      // Listing and review card animations
      const cards = document.querySelectorAll('.listing-card, .review-card');
      cards.forEach((card, index) => {
        card.style.opacity = '0';
        card.style.transform = 'translateY(20px)';
        
        setTimeout(() => {
          card.style.transition = 'all 0.6s ease';
          card.style.opacity = '1';
          card.style.transform = 'translateY(0)';
        }, index * 100);
      });
    });
  </script>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
  const deleteBtn = document.getElementById("deleteAccountBtn");

  deleteBtn.addEventListener("click", () => {
    Swal.fire({
      title: 'Are you sure?',
      text: "This will permanently delete your account, listings, and reviews!",
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#fe424d',
      cancelButtonColor: '#6c757d',
      confirmButtonText: 'Yes, delete my account!',
      cancelButtonText: 'Cancel'
    }).then((result) => {
      if (result.isConfirmed) {
        // Use form-encoded POST (simpler, no JSON parsing required)
        fetch('/delete', {
          method: 'POST'
        })
        .then(res => {
          if (res.ok) {
            Swal.fire(
              'Deleted!',
              'Your account has been permanently deleted.',
              'success'
            ).then(() => {
              window.location.href = '/'; // redirect to home
            });
          } else {
            res.text().then(msg => {
              Swal.fire('Error', msg || 'Something went wrong.', 'error');
            });
          }
        })
        .catch(err => Swal.fire('Error', 'Something went wrong.', 'error'));
      }
    });
  });

const __serverError = <%- typeof error !== 'undefined' ? JSON.stringify(error && error.length > 0 ? error[0] : null) : 'null' %>;
const __serverSuccess = <%- typeof success !== 'undefined' ? JSON.stringify(success && success.length > 0 ? success[0] : null) : 'null' %>;

if (__serverError) showError('Error', __serverError);
if (__serverSuccess) showSuccess('Success', __serverSuccess);
</script>

</body>
</html>