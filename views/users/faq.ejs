    </div>

    <!-- Category: Safety -->
    <div class="category-section">
      <div class="flex items-center gap-3 mb-6">
        <div class="category-badge w-12 h-12 brand-gradient rounded-xl flex items-center justify-center text-2xl shadow-lg">
          🛡
        </div>
        <h2 class="text-3xl font-bold text-gray-900">Safety</h2>
      </div>
      <div class="space-y-3">
        <div class="faq-item bg-white rounded-xl shadow-md hover:shadow-xl transition-all overflow-hidden border border-gray-100">
          <button class="faq-question flex justify-between items-center w-full text-left p-6 group">
            <span class="font-semibold text-gray-900 pr-4 group-hover:text-[#fe424d] transition-colors">Is StayZio safe to use?</span>
            <span class="transform transition-transform duration-300 flex-shrink-0" style="color: #fe424d;">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </span>
          </button>
          <div class="faq-answer hidden px-6 pb-6">
            <p class="text-gray-600 leading-relaxed">Absolutely. We verify hosts, secure payments, and offer customer support 24/7.</p>
          </div>
        </div>

        <div class="faq-item bg-white rounded-xl shadow-md hover:shadow-xl transition-all overflow-hidden border border-gray-100">
          <button class="faq-question flex justify-between items-center w-full text-left p-6 group">
            <span class="font-semibold text-gray-900 pr-4 group-hover:text-[#fe424d] transition-colors">What if I face issues during my stay?</span>
            <span class="transform transition-transform duration-300 flex-shrink-0" style="color: #fe424d;">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </span>
          </button>
          <div class="faq-answer hidden px-6 pb-6">
            <p class="text-gray-600 leading-relaxed">You can contact support or report directly through your dashboard.</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- CTA Section -->
  <div class="max-w-6xl mx-auto px-4 pb-16">
    <div class="brand-gradient rounded-3xl p-8 md:p-12 text-center text-white shadow-2xl">
      <h3 class="text-3xl font-bold mb-4">Still have questions?</h3>
      <p class="text-white/90 mb-6 text-lg">Our support team is here to help you 24/7</p>
      <a href="/contact" class="inline-block px-8 py-4 bg-white rounded-xl font-semibold hover:scale-105 transition-transform shadow-lg" style="color: #fe424d;">
        Contact Support
      </a>
    </div>
  </div>
  <%- include("../includes/footer.ejs") %>

  <script>
    // FAQ Dropdown Animation
    document.querySelectorAll(".faq-question").forEach(btn => {
      btn.addEventListener("click", () => {
        let answer = btn.nextElementSibling;
        let icon = btn.querySelector("svg");
        
        // Close other open FAQs
        document.querySelectorAll(".faq-answer").forEach(otherAnswer => {
          if (otherAnswer !== answer && !otherAnswer.classList.contains("hidden")) {
            otherAnswer.classList.add("hidden");
            otherAnswer.previousElementSibling.querySelector("svg").style.transform = "rotate(0deg)";
          }
        });

        answer.classList.toggle("hidden");
        icon.style.transform = answer.classList.contains("hidden") ? "rotate(0deg)" : "rotate(180deg)";
      });
    });

    // Search FAQ
    document.getElementById("searchFAQ").addEventListener("input", function() {
      let searchValue = this.value.toLowerCase();
      
      document.querySelectorAll(".category-section").forEach(category => {
        let categoryHasResults = false;
        
        category.querySelectorAll(".faq-item").forEach(item => {
          let question = item.querySelector(".faq-question span").textContent.toLowerCase();
          let answer = item.querySelector(".faq-answer p").textContent.toLowerCase();
          
          if (question.includes(searchValue) || answer.includes(searchValue)) {
            item.style.display = "block";
            categoryHasResults = true;
          } else {
            item.style.display = "none";
          }
        });
        
        category.style.display = categoryHasResults ? "block" : "none";
      });
    });
  </script>
  
<script>
  function toggleUserMenu() {
    const dropdown = document.getElementById('userDropdown');
    dropdown.classList.toggle('hidden');
  }

  document.addEventListener('click', function(event) {
    const userMenu = document.querySelector('.user-menu');
    const dropdown = document.getElementById('userDropdown');
    
    if (userMenu && dropdown && !userMenu.contains(event.target)) {
      dropdown.classList.add('hidden');
    }
  });
</script>


</body>
</html>