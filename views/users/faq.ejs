    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <div class="bg-white rounded-xl p-6 text-center shadow-md hover:shadow-xl transition-shadow">
        <div class="text-3xl font-bold mb-2" style="color: #fe424d;">8</div>
        <div class="text-sm text-gray-600">Total FAQs</div>
      </div>
      <div class="bg-white rounded-xl p-6 text-center shadow-md hover:shadow-xl transition-shadow">
        <div class="text-3xl font-bold mb-2" style="color: #fe424d;">4</div>
        <div class="text-sm text-gray-600">Categories</div>
      </div>
      <div class="bg-white rounded-xl p-6 text-center shadow-md hover:shadow-xl transition-shadow">
        <div class="text-3xl font-bold mb-2" style="color: #fe424d;">24/7</div>
        <div class="text-sm text-gray-600">Support</div>
      </div>
      <div class="bg-white rounded-xl p-6 text-center shadow-md hover:shadow-xl transition-shadow">
        <div class="text-3xl font-bold mb-2" style="color: #fe424d;">100%</div>
        <div class="text-sm text-gray-600">Secure</div>
      </div>
    </div>
  </div>

  <!-- FAQ Categories -->
  <div class="max-w-6xl mx-auto px-4 pb-16 space-y-12" id="faqContainer">

    <!-- Category: Booking -->
