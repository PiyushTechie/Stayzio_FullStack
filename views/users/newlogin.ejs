<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Stayzio - Login</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/login.css">
<link rel="icon" type="image/png" href="/images/favicon-removebg-preview.png">
</head>
<body>

<div class="container">
  <!-- Left Hero Section -->
  <div class="hero-section">
    <div class="hero-box"></div>
  </div>

  <!-- Right Form Section -->
  <div class="form-section">
    <div class="form-box">
      <div class="form-container">
        <div class="brand-header">
          <div class="brand-name">
            <img src="/images/logonobg.png" alt="Stayzio Logo" class="logo-img">
          </div>
          <h2>Welcome Back!</h2>
          <p class="welcome-subtitle">Login with your Registered Email</p>
        </div>

        <form id="loginForm" action="/login" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <div class="form-group">
            <label for="username">Email Id</label>
            <div class="input-wrapper">
              <svg class="input-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="2" y="4" width="20" height="16" rx="2"></rect>
                <path d="m2 7 10 6 10-6"></path>
              </svg>
              <input 
                type="email" 
                name="username" 
                id="username"
                placeholder="thisuix@email.com"
                required
              >
            </div>
          </div>

          <div class="form-group">
            <label for="password">Password</label>
            <div class="input-wrapper">
              <svg class="input-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
              </svg>
              <input 
                type="password" 
                name="password" 
                id="password"
                placeholder="••••••••••••••"
                required
              >
            </div>
          </div>

          <div class="forgot-password">
            <a href="/forgot-password">Forgot your password?</a>
          </div>

          <button type="submit" class="login-btn" id="loginBtn">
            <span class="btn-text">LOGIN</span>
            <div class="spinner hidden"></div>
          </button>
        </form>

        <div class="divider">OR</div>

        <div class="social-login">
          <a href="/auth/google" class="social-btn" title="Login with Google">
          <svg width="20" height="20" viewBox="0 0 24 24">
              <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
              <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
              <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
              <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
          </a>

          <a href="/auth/facebook" class="social-btn" title="Login with Facebook">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="#1877F2">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>

          <a href="/auth/github" class="social-btn" title="Login with GitHub">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="#000">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>
        </div>

        <p class="register-link">Don't have account? <a href="/signup">Register Now</a></p>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<!-- Load your alert utilities -->
<script type="module" src="/utils/alerts.js"></script>

<script type="module">
  import { showError, showSuccess } from '/utils/alerts.js';

  const __serverError = <%- JSON.stringify(error && error.length > 0 ? error[0] : null) %>;
  const __serverSuccess = <%- JSON.stringify(success && success.length > 0 ? success[0] : null) %>;

  if (__serverError) showError('Error', __serverError);
  if (__serverSuccess) showSuccess('Success', __serverSuccess);
</script>

<script>
const loginForm = document.getElementById("loginForm");
const loginBtn = document.getElementById("loginBtn");
const btnText = loginBtn.querySelector(".btn-text");
const spinner = loginBtn.querySelector(".spinner");

loginForm.addEventListener("submit", (e) => {
    btnText.style.display = "none";
    spinner.classList.remove("hidden");
    loginBtn.disabled = true;
});
</script>


</body>
</html>