<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Analytics Dashboard</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">

  <style>
    :root {
      --brand-primary: #fe424d;
      --brand-primary-dark: #e63946;
      --brand-primary-light: #ff6b74;
      --text-primary: #1a1a1a;
      --text-secondary: #6c757d;
      --bg-light: #f8f9fa;
      --border-color: #e9ecef;
    }

    body {
      background: linear-gradient(135deg, #fff5f5 0%, #ffffff 100%);
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    }

    .container {
      padding-top: 2rem;
      padding-bottom: 2rem;
    }

    h1 {
      font-size: 2rem;
      font-weight: 700;
      color: var(--text-primary);
      margin-bottom: 0.5rem;
      position: relative;
      padding-bottom: 1rem;
    }

    h1::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 80px;
      height: 4px;
      background: linear-gradient(90deg, var(--brand-primary), var(--brand-primary-light));
      border-radius: 2px;
    }

    .row {
      margin-top: 2.5rem !important;
    }

    .chart-container {
      background: white;
      border-radius: 16px;
      box-shadow: 0 4px 20px rgba(254, 66, 77, 0.08);
      padding: 2rem;
      border: 1px solid var(--border-color);
      height: 100%;
      display: flex;
      flex-direction: column;
    }

    .chart-header {
      font-size: 1.1rem;
      font-weight: 600;
      color: var(--text-primary);
      margin-bottom: 1.5rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .chart-header::before {
      content: '';
      width: 4px;
      height: 20px;
      background: var(--brand-primary);
      border-radius: 2px;
    }

    #revenueChart {
      height: 300px !important;
    }

    .card {
      background: white !important;
      border-radius: 16px !important;
      box-shadow: 0 4px 20px rgba(254, 66, 77, 0.08) !important;
      padding: 2rem !important;
      border: 1px solid var(--border-color) !important;
      height: 100%;
    }

    .card h5 {
      font-size: 0.95rem;
      font-weight: 600;
      color: var(--text-secondary);
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin-bottom: 0.75rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .card h5::before {
      content: '';
      width: 3px;
      height: 16px;
      background: var(--brand-primary);
      border-radius: 2px;
    }

    .card .display-6 {
      font-size: 2.5rem !important;
      font-weight: 700;
      color: var(--brand-primary);
      margin-bottom: 2rem;
      line-height: 1.2;
    }

    .card .display-6:last-child {
      margin-bottom: 0;
    }

    .text-muted {
      color: var(--text-secondary) !important;
      font-style: italic;
      text-align: center;
      padding: 2rem;
    }

    @media (max-width: 768px) {
      .container {
        padding-top: 1rem;
      }

      h1 {
        font-size: 1.5rem;
      }

      .row {
        margin-top: 1.5rem !important;
      }

      .chart-container,
      .card {
        padding: 1.5rem !important;
        margin-bottom: 1rem;
      }

      .card .display-6 {
        font-size: 2rem !important;
        margin-bottom: 1.5rem;
      }

      #revenueChart {
        height: 250px !important;
      }
    }
  </style>
</head>
<body>

  <div class="container mt-5">
    <h1>Analytics Dashboard</h1>

    <div class="row mt-4">
      <div class="col-md-6">
        <div class="chart-container">
          <div class="chart-header">Monthly Revenue</div>
          <canvas id="revenueChart" style="height:300px;"></canvas>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card p-3 shadow-sm">
          <h5>Average Rating</h5>
          <p class="display-6"><%= (avgRating || 0).toFixed(1) %> ‚≠ê</p>
          <h5>Total Reviews</h5>
          <p class="display-6"><%= totalReviews || 0 %></p>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  
  <script>
    // Safe guards for empty data
    const revenueLabels = <%- JSON.stringify(Object.keys(revenueByMonth || {})) %>;
    const revenueData = <%- JSON.stringify(Object.values(revenueByMonth || {})) %>;

    // If no data, display a message instead of chart
    if (revenueLabels.length === 0) {
      document.getElementById('revenueChart').insertAdjacentHTML('afterend', '<p class="mt-3 text-muted">No revenue data available.</p>');
    } else {
      const ctx = document.getElementById('revenueChart').getContext('2d');
      new Chart(ctx, {
        type: 'bar',
        data: {
          labels: revenueLabels,
          datasets: [{
            label: 'Revenue',
            data: revenueData,
            backgroundColor: 'rgba(254, 66, 77, 0.7)'
          }]
        },
        options: {
          responsive: true,
          plugins: { legend: { display: false } },
          scales: { y: { beginAtZero: true } }
        }
      });
    }
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>