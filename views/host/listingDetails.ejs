<% layout("/layouts/boilerplate") %>

<style>
  :root {
    --brand-primary: #fe424d;
    --brand-primary-dark: #e63946;
    --brand-primary-light: #ff6b74;
    --text-primary: #1a1a1a;
    --text-secondary: #6c757d;
    --bg-light: #f8f9fa;
    --border-color: #e9ecef;
  }

  body {
    background: linear-gradient(135deg, #fff5f5 0%, #ffffff 100%);
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  }

  h1 {
    font-size: 2rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
    position: relative;
    padding-bottom: 1rem;
    margin-top: 2rem;
  }

  h1::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 80px;
    height: 4px;
    background: linear-gradient(90deg, var(--brand-primary), var(--brand-primary-light));
    border-radius: 2px;
  }

  h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-top: 3rem;
    margin-bottom: 1.5rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  h3::before {
    content: '';
    width: 6px;
    height: 24px;
    background: var(--brand-primary);
    border-radius: 3px;
  }

  .table-container {
    background: white;
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(254, 66, 77, 0.08);
    overflow: hidden;
    margin-bottom: 2rem;
    border: 1px solid var(--border-color);
  }

  .table {
    margin-bottom: 0 !important;
  }

  .table thead {
    background: linear-gradient(135deg, var(--brand-primary), var(--brand-primary-dark)) !important;
  }

  .table thead th {
    color: white !important;
    font-weight: 600 !important;
    font-size: 0.875rem !important;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    padding: 1rem 1.25rem !important;
    border: none !important;
    white-space: nowrap;
    background: transparent !important;
  }

  .table tbody tr {
    transition: all 0.3s ease;
    border-bottom: 1px solid var(--border-color);
  }

  .table tbody tr:last-child {
    border-bottom: none;
  }

  .table tbody tr:hover {
    background-color: #fff5f5 !important;
    transform: translateX(4px);
  }

  .table tbody td {
    padding: 1.25rem !important;
    color: var(--text-primary);
    font-size: 0.95rem;
    vertical-align: middle;
    border: none !important;
  }

  .table-bordered tbody td:first-child {
    font-weight: 600;
    color: var(--brand-primary);
  }

  .table-striped tbody tr:nth-of-type(odd) {
    background-color: rgba(254, 66, 77, 0.02) !important;
  }

  .table-sm td {
    padding: 0.875rem 1.25rem !important;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 1.5rem;
      margin-top: 1rem;
    }

    h3 {
      font-size: 1.1rem;
      margin-top: 2rem;
    }

    .table-container {
      border-radius: 12px;
      overflow-x: auto;
    }

    .table {
      font-size: 0.85rem;
    }

    .table thead th,
    .table tbody td {
      padding: 0.75rem !important;
    }

    .table tbody tr:hover {
      transform: none;
    }
  }
</style>

<h1><%= listing.title %> - Bookings & Pricing</h1>

<h3>Upcoming Bookings</h3>
<div class="table-container">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Guest</th>
        <th>Check-In</th>
        <th>Check-Out</th>
        <th>Status</th>
        <th>Amount (₹)</th>
      </tr>
    </thead>
    <tbody>
      <% bookings.forEach(b => { %>
        <tr>
          <td><%= b.user.username %></td>
          <td><%= new Date(b.checkIn).toLocaleDateString() %></td>
          <td><%= new Date(b.checkOut).toLocaleDateString() %></td>
          <td><%= b.status %></td>
          <td>
            <% 
              let nights = Math.ceil((new Date(b.checkOut)-new Date(b.checkIn))/(1000*3600*24));
              let total = 0;
              for(let i=0;i<nights;i++){
                let date = new Date(b.checkIn);
                date.setDate(date.getDate()+i);
                total += calculateDynamicPrice(listing, date).price;
              }
            %>
            ₹<%= total %>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<h3>Next 30 Days Dynamic Pricing</h3>
<div class="table-container">
  <table class="table table-sm table-striped">
    <thead>
      <tr>
        <th>Date</th>
        <th>Price (₹)</th>
      </tr>
    </thead>
    <tbody>
      <% perNightPrices.forEach(p => { %>
        <tr>
          <td><%= p.date.toLocaleDateString() %></td>
          <td>₹<%= p.price %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>