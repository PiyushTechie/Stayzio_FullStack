<div class="container">
  <h1>Host Dashboard</h1>

  <h3>Your Listings</h3>
  <div class="dashboard-card">
    <div class="table-wrapper">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Title</th>
            <th>Price</th>
            <th>Bookings</th>
            <th>Earnings (₹)</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% listings.forEach(listing => { %>
            <tr>
              <td><%= listing.title %></td>
              <td>₹<%= listing.price %></td>
              <td><%= bookings.filter(b => b.listing._id.equals(listing._id)).length %></td>
              <td>₹<%= earningsPerListing[listing._id] || 0 %></td>
              <td>
                <a href="/host/listing/<%= listing._id %>" class="btn btn-primary btn-sm">View</a>
                <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>