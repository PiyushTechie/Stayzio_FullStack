    <a href="/host/bookings" class="btn btn-success">
      <span>üìñ</span> View Bookings
    </a>
    <a href="/host/analytics" class="btn btn-warning">
      <span>üìä</span> View Analytics
    </a>
  </div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
