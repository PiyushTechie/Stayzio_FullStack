<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>My Bookings - Stayzio</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
  <style>
    :root {
      --primary-color: #fe424d;
      --primary-dark: #e23940;
      --primary-light: #ff6b73;
      --gradient-primary: linear-gradient(135deg, #fe424d, #ff6b73);
      --shadow-soft: 0 10px 30px rgba(254, 66, 77, 0.1);
      --shadow-card: 0 8px 25px rgba(0, 0, 0, 0.08);
      --border-radius: 16px;
    }

    body {
      background: linear-gradient(135deg, #f8f9ff 0%, #fff5f5 100%);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      min-height: 100vh;
      padding: 2rem 0;
    }

    .main-container {
      background: white;
      border-radius: var(--border-radius);
      box-shadow: var(--shadow-card);
      margin: 0 auto;
      overflow: hidden;
      max-width: 1200px;
      position: relative;
    }

    .header-section {
      background: var(--gradient-primary);
      color: white;
      padding: 2.5rem 2rem;
      text-align: center;
    }

    .filter-tabs {
      display: flex;
      justify-content: center;
      gap: 1rem;
      background: #fff;
      border-bottom: 2px solid #f1f3f5;
      padding: 1rem 0;
      flex-wrap: wrap;
    }

    .tab-btn {
      background: #f8f9fa;
      border: none;
      padding: 0.75rem 1.5rem;
      font-weight: 600;
      border-radius: 25px;
      color: #495057;
      transition: all 0.3s ease;
    }

    .tab-btn.active {
      background: var(--primary-color);
      color: #fff;
      box-shadow: 0 4px 10px rgba(254, 66, 77, 0.2);
    }

    .booking-card {
      background: white;
      border: 2px solid #f0f0f0;
      border-radius: var(--border-radius);
      margin-bottom: 1.5rem;
      overflow: hidden;
      transition: all 0.3s ease;
      position: relative;
    }

    .booking-header {
      padding: 1.5rem;
      border-bottom: 1px solid #e9ecef;
      background: linear-gradient(135deg, #f8f9ff, #fff);
    }

    .listing-title {
      font-size: 1.3rem;
      font-weight: 700;
      color: var(--primary-color);
      text-decoration: none;
    }

    .booking-body {
      padding: 1.5rem;
    }

    .status-badge {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.5rem 1rem;
      border-radius: 25px;
      font-size: 0.9rem;
      font-weight: 600;
      text-transform: capitalize;
    }

    .status-confirmed { background: linear-gradient(135deg, #28a745, #34d058); color: white; }
    .status-pending { background: linear-gradient(135deg, #ffc107, #ffed4e); color: #8b5a00; }
    .status-cancelled { background: linear-gradient(135deg, #dc3545, #fd7e7e); color: white; }

    .btn-download, .btn-view, .btn-cancel {
      border: none;
      padding: 0.75rem 1.5rem;
      border-radius: 8px;
      font-weight: 600;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      text-decoration: none;
      transition: all 0.3s ease;
    }

    .btn-download {
      background: linear-gradient(135deg, #28a745, #34d058);
      color: white;
    }

    .btn-view {
      background: linear-gradient(135deg, #007bff, #00a2ff);
      color: white;
    }

    .btn-cancel {
      background: linear-gradient(135deg, #dc3545, #fd7e7e);
      color: white;
    }

    .booking-actions {
      display: flex;
      justify-content: flex-end;
      padding-top: 1rem;
      border-top: 1px solid #e9ecef;
      gap: 0.75rem;
      flex-wrap: wrap;
    }

    .guest-item {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      margin-bottom: 0.5rem;
    }

    .guest-icon {
      width: 32px;
      height: 32px;
      border-radius: 50%;
      background: var(--gradient-primary);
      color: white;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    @media (max-width: 768px) {
      .booking-actions { flex-direction: column; align-items: stretch; }
    }
  </style>
</head>

<body>
  <div class="main-container">
    <div class="header-section">
      <h1><i class="fas fa-calendar-check"></i> My Bookings</h1>
      <p class="mb-0">Track and manage all your reservations</p>
    </div>

    <!-- Filter Tabs -->
    <div class="filter-tabs">
      <button class="tab-btn active" data-filter="upcoming"><i class="fas fa-plane-departure"></i> Upcoming</button>
      <button class="tab-btn" data-filter="completed"><i class="fas fa-check-circle"></i> Completed</button>
      <button class="tab-btn" data-filter="pending"><i class="fas fa-clock"></i> Pending</button>
      <button class="tab-btn" data-filter="cancelled"><i class="fas fa-ban"></i> Cancelled</button>
    </div>

    <div class="content-section p-4">
      <% const now = new Date(); %>
      <% if (!bookings || bookings.length === 0) { %>
        <div class="text-center text-muted py-5">
          <i class="fas fa-calendar-times fa-3x text-danger opacity-75 mb-3"></i>
          <h3>No Bookings Yet</h3>
          <p>Start exploring amazing places and make your first reservation!</p>
        </div>
      <% } else { %>
        <% bookings.forEach(b => { %>
          <% 
            const isUpcoming = b.checkIn > now && b.status === "confirmed";
            const isCompleted = b.checkOut < now && b.status === "confirmed";
            const isCancelled = b.status === "cancelled";
            const isPending = b.status === "pending";
            const status = isUpcoming ? 'upcoming' : isCompleted ? 'completed' : isCancelled ? 'cancelled' : isPending ? 'pending' : '';
            const displayStyle = isUpcoming ? 'block' : 'none';
          %>

            <div class="booking-card" data-status="<%= status %>" style="display: <%= displayStyle %>;">
            <div class="booking-header d-flex justify-content-between align-items-center">
              <a href="/listings/<%= b.listing._id %>" class="listing-title"><i class="fas fa-home"></i> <%= b.listing.title %></a>
              <span class="status-badge status-<%= b.status %>">
                <i class="fas <%= b.status === 'confirmed' ? 'fa-check-circle' : b.status === 'pending' ? 'fa-clock' : 'fa-times-circle' %>"></i> <%= b.status %>
              </span>
            </div>

            <div class="booking-body">
              <div><strong>Check-in:</strong> <%= b.checkIn.toDateString() %></div>
              <div><strong>Check-out:</strong> <%= b.checkOut.toDateString() %></div>

              <div class="booking-actions">
                <button class="btn-view" data-bs-toggle="modal" data-bs-target="#detailsModal<%= b._id %>">
                  <i class="fas fa-eye"></i> View Details
                </button>

                <% if (b.status === "confirmed") { %>
                  <a href="/bookings/<%= b._id %>/download" target="_blank" class="btn-download">
                    <i class="fas fa-file-invoice"></i> Invoice
                  </a>
                <% } %>

                <% if (b.status !== "cancelled" && b.checkIn > now) { %>
                  <form action="/bookings/<%= b._id %>/cancel" method="POST" class="cancel-form" style="display:inline;">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="button" class="btn-cancel" data-bs-toggle="modal" data-bs-target="#cancelModal">
                      <i class="fas fa-times"></i> Cancel
                    </button>
                  </form>
                <% } %>
                
                    <% if (b.status === "cancelled") { %>
                    <form action="/bookings/<%= b._id %>/delete" 
                          method="POST" 
                          class="delete-form" 
                          style="display:inline;">
                          
                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                      <button type="button"
                              class="btn-cancel"
                              data-bs-toggle="modal"
                              data-bs-target="#deleteModal">
                        <i class="fas fa-trash-alt"></i> Remove
                      </button>
                    </form>
                <% } %>
              </div>
            </div>
          </div>

          <!-- Booking Details Modal -->
          <div class="modal fade" id="detailsModal<%= b._id %>" tabindex="-1">
            <div class="modal-dialog modal-lg modal-dialog-centered">
              <div class="modal-content">
                <div class="modal-header bg-light">
                  <h5 class="modal-title"><i class="fas fa-info-circle text-primary me-2"></i> Booking Details</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                  <p><strong>Property:</strong> <%= b.listing.title %></p>
                  <p><strong>Host:</strong> <%= b.listing.owner?.username || "Stayio Host" %></p>
                  <p><strong>Booking ID:</strong> <code><%= b._id %></code></p>
                  <hr>

                  <h6 class="text-danger"><i class="fas fa-users me-1"></i> Guests</h6>
                  <% if (b.guests && b.guests.length > 0) { %>
                    <% b.guests.forEach(g => { %>
                      <div class="guest-item">
                        <div class="guest-icon"><i class="fas <%= g.type === 'Adult' ? 'fa-user-tie' : 'fa-child' %>"></i></div>
                        <div>
                          <strong><%= g.name %></strong><br>
                          <small><%= g.type %>, Age <%= g.age %>, <%= g.gender %></small>
                        </div>
                      </div>
                    <% }) %>
                  <% } else { %>
                    <p class="text-muted">No guest details provided.</p>
                  <% } %>

                  <hr>
                  <p><strong>Contact:</strong> <%= b.contactNumber || "N/A" %></p>

                  <% if (b.finalTotal) { 
                    const subtotal = b.finalTotal / 1.23; 
                    const gst = subtotal * 0.18; 
                    const fee = subtotal * 0.05;
                  %>
                    <hr>
                    <h6 class="text-success"><i class="fas fa-receipt me-1"></i> Price Breakdown</h6>
                    <div class="d-flex justify-content-between"><span>Subtotal</span><span>₹<%= subtotal.toFixed(2) %></span></div>
                    <div class="d-flex justify-content-between"><span>GST (18%)</span><span>₹<%= gst.toFixed(2) %></span></div>
                    <div class="d-flex justify-content-between"><span>Convenience Fee (5%)</span><span>₹<%= fee.toFixed(2) %></span></div>
                    <div class="d-flex justify-content-between fw-bold border-top mt-2 pt-2"><span>Total</span><span>₹<%= b.finalTotal.toFixed(2) %></span></div>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>

  <!-- Cancel Confirmation Modal -->
  <div class="modal fade" id="cancelModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5><i class="fas fa-exclamation-triangle text-danger me-2"></i> Confirm Cancellation</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">Are you sure you want to cancel this booking?</div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Keep</button>
          <button type="button" class="btn btn-danger" id="confirmCancelBtn">Cancel Booking</button>
        </div>
      </div>
    </div>
  </div>
  <div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5><i class="fas fa-exclamation-triangle text-danger me-2"></i> Confirm Deletion</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <p>Are you sure you want to permanently remove this booking?</p>
          <p class="fw-bold text-danger">This action cannot be undone.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Keep</button>
          <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Yes, Remove</button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    
    const cancelModal = document.getElementById('cancelModal');
    let formToSubmit = null;
    cancelModal.addEventListener('show.bs.modal', e => formToSubmit = e.relatedTarget.closest('.cancel-form'));
    document.getElementById('confirmCancelBtn').addEventListener('click', () => formToSubmit?.submit());

    
    const deleteModal = document.getElementById('deleteModal');
    let deleteFormToSubmit = null;
    deleteModal.addEventListener('show.bs.modal', e => deleteFormToSubmit = e.relatedTarget.closest('.delete-form'));
    document.getElementById('confirmDeleteBtn').addEventListener('click', () => deleteFormToSubmit?.submit());

    
    const tabs = document.querySelectorAll('.tab-btn');
    const cards = document.querySelectorAll('.booking-card');
    tabs.forEach(tab => tab.addEventListener('click', () => {
      tabs.forEach(t => t.classList.remove('active'));
      tab.classList.add('active');
      const filter = tab.dataset.filter;
      cards.forEach(c => c.style.display = c.dataset.status === filter ? 'block' : 'none');
    }));
  </script>
</body>
</html>
