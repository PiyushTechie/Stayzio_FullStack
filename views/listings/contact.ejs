                </form>

                <br>
                <div>
                  Kindly check your Spam folder for the confirmation regarding your query.
            </div>
        </div>
    </div>

    <script>
        const form = document.getElementById('contactForm');
        const sendBtn = document.getElementById('sendBtn');
        const successMessage = document.getElementById('successMessage');

        // Form submission handling
        form.addEventListener('submit', function(e) {
            
            // Add loading state
            sendBtn.disabled = true;
            sendBtn.classList.add('loading');
            
        });

        // Enhanced form interactions
        const inputs = document.querySelectorAll('input, textarea, select');
        inputs.forEach(input => {
            input.addEventListener('focus', function() {
                this.closest('.form-group').style.transform = 'scale(1.02)';
            });
            
            input.addEventListener('blur', function() {
                this.closest('.form-group').style.transform = 'scale(1)';
            });
        });

        // Floating shapes animation variety
        const shapes = document.querySelectorAll('.shape');
        shapes.forEach((shape, index) => {
            shape.style.animationDelay = `${-index * 1.5}s`;
            shape.style.animationDuration = `${6 + index * 2}s`;
        });

        // Add subtle parallax effect to background elements
        window.addEventListener('scroll', () => {
            const scrolled = window.pageYOffset;
            const shapes = document.querySelector('.floating-shapes');
            shapes.style.transform = `translateY(${scrolled * 0.1}px)`;
        });
    </script>
</body>
</html>