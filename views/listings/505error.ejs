    <style>
        :root {
            --primary-color: #fe424d;
            --dark-color: #333333;
            --light-color: #f4f4f4;
            --font-family: 'Montserrat', sans-serif;
        }

        body {
            font-family: var(--font-family);
            color: var(--dark-color);
            background-color: #fff;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            text-align: center;
            padding: 20px;
            box-sizing: border-box;
            overflow: hidden; /* For background particles */
            position: relative;
        }

        /* Background Particle Animation */
        .particle {
            position: absolute;
            background-color: rgba(254, 66, 77, 0.1); /* Primary color with transparency */
            border-radius: 50%;
            pointer-events: none;
            opacity: 0;
            animation: floatAndFade 10s ease-in-out infinite;
        }

        .particle:nth-child(1) { width: 15px; height: 15px; top: 10%; left: 5%; animation-delay: 0s; }
        .particle:nth-child(2) { width: 10px; height: 10px; top: 20%; left: 25%; animation-delay: 1.5s; }
        .particle:nth-child(3) { width: 20px; height: 20px; top: 5%; left: 70%; animation-delay: 3s; }
        .particle:nth-child(4) { width: 12px; height: 12px; top: 40%; left: 15%; animation-delay: 4.5s; }
        .particle:nth-child(5) { width: 18px; height: 18px; top: 60%; left: 85%; animation-delay: 6s; }
        .particle:nth-child(6) { width: 14px; height: 14px; top: 80%; left: 30%; animation-delay: 7.5s; }
        .particle:nth-child(7) { width: 9px; height: 9px; top: 90%; left: 50%; animation-delay: 9s; }
        .particle:nth-child(8) { width: 16px; height: 16px; top: 30%; left: 95%; animation-delay: 10.5s; }


        @keyframes floatAndFade {
            0% { transform: translateY(0) translateX(0) scale(0.5); opacity: 0; }
            20% { opacity: 1; }
            80% { opacity: 1; }
            100% { transform: translateY(-100vh) translateX(50px) scale(1); opacity: 0; }
        }

        .container {
            max-width: 600px;
            width: 100%;
            position: relative; /* Above particles */
            z-index: 10;
        }

        .error-code {
            font-size: 4.5rem;
            font-weight: 700;
            color: var(--primary-color);
            margin-bottom: 0.5rem;
            line-height: 1;
            animation: textStagger 1s ease-out forwards;
            opacity: 0;
            display: inline-block; /* For staggered effect */
        }

        @keyframes textStagger {
            0% { opacity: 0; transform: translateY(-20px); }
            100% { opacity: 1; transform: translateY(0); }
        }

        .error-code span:nth-child(1) { animation-delay: 0.1s; }
        .error-code span:nth-child(2) { animation-delay: 0.2s; }
        .error-code span:nth-child(3) { animation-delay: 0.3s; }


        .error-graphic {
            width: 150px;
            height: auto;
            margin: 1.5rem auto 2rem;
            animation: wobble 2s ease-in-out infinite alternate;
        }

        @keyframes wobble {
            0%, 100% { transform: translateX(0px) rotate(0deg); }
            25% { transform: translateX(-3px) rotate(-1deg); }
            50% { transform: translateX(3px) rotate(1deg); }
            75% { transform: translateX(-2px) rotate(-0.5deg); }
        }
        
        .error-graphic .stroke {
            stroke: var(--dark-color);
        }
        
        .error-graphic .accent {
            fill: var(--primary-color);
        }

        h1 {
            font-size: 2.2rem;
            font-weight: 700;
            margin: 0;
            animation: fadeIn 1s ease-out forwards;
            animation-delay: 0.8s;
            opacity: 0;
        }
        
        h1 span {
            color: var(--primary-color);
        }

        p {
            font-size: 1.1rem;
            line-height: 1.6;
            margin: 1rem 0 2.5rem;
            color: #666;
            animation: fadeIn 1s ease-out forwards;
            animation-delay: 1.2s;
            opacity: 0;
        }

        .cta-button {
            display: inline-block;
            background-color: var(--primary-color);
            color: #fff;
            padding: 15px 35px;
            border-radius: 50px;
            text-decoration: none;
            font-weight: 600;
            font-size: 1rem;
            transition: background-color 0.3s ease, transform 0.2s ease, box-shadow 0.3s ease;
            animation: fadeIn 1s ease-out forwards;
            animation-delay: 1.6s;
            opacity: 0;
        }

        .cta-button:hover {
            background-color: #e43a45;
            transform: scale(0.98); /* Subtle "reset" or "press" */
            box-shadow: 0 0 0 5px rgba(254, 66, 77, 0.3); /* Ring effect */
        }

        .nav-links {
            margin-top: 3rem;
            border-top: 1px solid #eee;
            padding-top: 2rem;
            animation: fadeIn 1s ease-out forwards;
            animation-delay: 2s;
            opacity: 0;
        }

        .nav-links p {
            font-size: 0.9rem;
            font-weight: 600;
            margin: 0 0 1rem;
            color: #888;
            text-transform: uppercase;
        }

        .nav-links a {
            color: var(--primary-color);
            text-decoration: none;
            margin: 0 15px;
            font-weight: 600;
            transition: color 0.3s ease, transform 0.2s ease;
            display: inline-block;
        }

        .nav-links a:hover {
            color: var(--dark-color);
            transform: scale(1.05); /* Slight enlarge */
        }
        
        /* General Fade In (used by multiple elements with delays) */
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* Responsive styles */
        @media (max-width: 480px) {
            .error-code {
                font-size: 3.5rem;
            }
            h1 {
                font-size: 1.8rem;
            }
            .nav-links {
                flex-direction: column;
                gap: 1rem;
            }
            .nav-links a {
                margin: 0;
            }
        }

    </style>
</head>
