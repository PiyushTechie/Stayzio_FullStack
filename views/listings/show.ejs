</head>

<body>
  <%- include("../includes/navbar.ejs") %>

  <div class="container-custom">
    <%- include("../includes/flash.ejs") %>
    
    <div class="hero-section">
      <div class="hero-header">
        <h1 class="hero-title"><%= listing.title %></h1>
        <div class="action-bar">
          <a href="/listings" class="btn-modern btn-white">
            <i class="fa-solid fa-arrow-left"></i> Back to Listings
          </a>
          <% if (currentUser && listing.owner._id.equals(currentUser._id)) { %>
            <a href="/listings/<%= listing._id %>/edit" class="btn-modern btn-outline">
              <i class="fa-solid fa-pen-to-square"></i> Edit Listing
            </a>
            <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" class="d-inline">
              <button type="submit" class="btn-modern btn-danger">
                <i class="fa-solid fa-trash"></i> Delete
              </button>
            </form>
          <% } %>
        </div>
      </div>
    </div>

    <div class="image-section">
      <img src="<%= listing.image.url %>" alt="Listing Image" class="main-image">
    </div>

    <div class="content-grid">
      <div class="main-content">
        <div class="detail-grid">
          <div class="detail-card">
            <div class="detail-header">
              <div class="detail-icon"><i class="fa-solid fa-user"></i></div>
              <div>
                <div class="detail-label">Hosted By</div>
                <div class="detail-value">
                  <% if (listing.owner) { %>
                    <%= listing.owner.username %>
                  <% } else { %>
                    Unknown
                  <% } %>
                </div>
              </div>
            </div>
          </div>
          <div class="detail-card">
            <div class="detail-header">
              <div class="detail-icon"><i class="fa-solid fa-align-left"></i></div>
              <div>
                <div class="detail-label">Description</div>
                <div class="detail-value"><%= listing.description %></div>
              </div>
            </div>
          </div>
          <div class="detail-card">
            <div class="detail-header">
              <div class="detail-icon"><i class="fa-solid fa-location-dot"></i></div>
              <div>
                <div class="detail-label">Location</div>
                <div class="detail-value"><%= listing.location %></div>
              </div>
            </div>
          </div>
          <div class="detail-card">
            <div class="detail-header">
              <div class="detail-icon"><i class="fa-solid fa-flag"></i></div>
              <div>
                <div class="detail-label">Country</div>
                <div class="detail-value"><%= listing.country %></div>
              </div>
            </div>
          </div>
          <div class="detail-card">
            <div class="detail-header">
              <div class="detail-icon"><i class="fa-solid fa-layer-group"></i></div>
              <div>
                <div class="detail-label">Category</div>
                <div class="detail-value text-capitalize"><%= listing.category %></div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="sidebar">
        <div class="detail-card">
          <div class="detail-header">
            <div class="detail-icon"><i class="fa-solid fa-rupee-sign"></i></div>
            <div>
              <div class="detail-label">Price per Night</div>
              <div class="detail-value price-highlight">₹ <%= listing.price ? listing.price.toLocaleString("en-IN") : 'Not Available' %></div>
            </div>
          </div>
        </div>
        <br>
        <div class="booking-section">
            <h3 class="booking-title">Reserve Your Stay</h3>

            <form id="booking-form" action="/bookings/details" method="GET" class="booking-form needs-validation" novalidate>
              <input type="hidden" name="listingId" value="<%= listing._id %>">
              
              <div class="form-group">
                <label class="form-label">Check In</label>
                <input type="text" id="checkIn" name="checkIn" class="form-input" required placeholder="Select Date">
              </div>
              
              <div class="form-group">
                <label class="form-label">Check Out</label>
                <input type="text" id="checkOut" name="checkOut" class="form-input" required placeholder="Select Date">
              </div>

              <div id="date-error" class="text-white text-center mt-2" style="font-weight: 600; min-height: 1.2rem;"></div>

              <button type="submit" id="bookBtn" class="btn-book">
        <span class="button-text">
          <i class="fa-solid fa-calendar-check"></i> Proceed to Book
        </span>
        <span class="button-loader"></span>
      </button>
            </form>
          </div>
      </div>
    </div>

    <div class="map-section">
      <div class="map-header">
        <h3 class="map-title">Explore the Area</h3>
        <button id="loadMapBtn" class="btn-map">
          <i class="fa-solid fa-map-location-dot"></i> View Map
        </button>
      </div>
      <div id="map" style="display:none;"></div>
    </div>

    <div class="reviews-section">
      <div class="section-header">
        <h2 class="section-title">Guest Reviews</h2>
        <p class="section-subtitle">See what others have to say</p>
      </div>

      <% if (currentUser) { %>
        <div class="review-form-container">
          <form action="/listings/<%= listing._id %>/reviews" method="POST" class="needs-validation" novalidate>
            <div class="form-group text-center">
              <label class="form-label">Your Rating</label>
              <div class="star-rating">
                <i class="fa-solid fa-star" data-value="1"></i>
                <i class="fa-solid fa-star" data-value="2"></i>
                <i class="fa-solid fa-star" data-value="3"></i>
                <i class="fa-solid fa-star" data-value="4"></i>
                <i class="fa-solid fa-star" data-value="5"></i>
              </div>
              <input type="hidden" name="review[rating]" id="ratingValue" value="1" required>
            </div>
            <div class="form-group">
              <label class="form-label">Your Review</label>
              <textarea id="comment" name="review[comment]" class="review-textarea" placeholder="Tell others about your experience..." required></textarea>
            </div>
            <button type="submit" class="btn-submit">
              <i class="fa-solid fa-paper-plane"></i> Submit Review
            </button>
          </form>
        </div>
      <% } else { %>
        <div class="login-prompt">
          <i class="fa-solid fa-lock"></i>
          <p>You must be logged in to leave a review.</p>
          <br>
          <a href="/login" class="btn-submit" style="text-decoration: none; display: inline; margin: 0; width: 150px; height: 150px;">
            </i>Login
          </a>
        </div>
      <% } %>

      <hr style="margin: 3rem 0;">

      <% if (listing.reviews.length === 0) { %>
        <div class="no-reviews">
          <i class="fa-regular fa-comments"></i>
          <p>No reviews yet. Be the first to share your experience!</p>
        </div>
      <% } else { %>
        <div class="reviews-grid">
          <% listing.reviews.forEach(review => { %>
            <div class="review-card">
              <div class="reviewer-info">
                <% if (review.author && review.author.username) { %>
                  <div class="reviewer-avatar"><%= review.author.username.charAt(0) %></div>
                  <div class="reviewer-name"><%= review.author.username %></div>
                <% } else { %>
                  <div class="reviewer-avatar"><i class="fa-solid fa-user-secret"></i></div>
                  <div class="reviewer-name"><em>Anonymous</em></div>
                <% } %>
              </div>
              <div class="review-rating">
                <% for (let i = 1; i <= 5; i++) { %>
                  <i class="<%= i <= review.rating ? 'fa-solid fa-star' : 'fa-regular fa-star' %>" style="color: var(--primary-color);"></i>
                <% } %>
              </div>
              <p class="review-comment">"<%= review.comment %>"</p>

              <% if (currentUser && review.author && review.author._id.equals(currentUser._id)) { %>
                <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST" class="d-inline">
                  <button type="submit" class="btn-modern btn-danger">
                    <i class="fa-solid fa-trash"></i> Delete
                  </button>
                </form>
              <% } %>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>
  </div>
  <%- include("../includes/footer.ejs") %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
