  <style>
    :root {
      --primary-color: #fe424d;
      --primary-light: rgba(254, 66, 77, 0.1);
      --primary-dark: #e03c47;
      --text-dark: #1a1a1a;
      --text-light: #6b7280;
      --bg-light: #f8fafc;
      --white: #ffffff;
      --shadow-sm: 0 1px 3px rgba(0, 0, 0, 0.12), 0 1px 2px rgba(0, 0, 0, 0.24);
      --shadow-md: 0 4px 6px rgba(0, 0, 0, 0.07), 0 2px 4px rgba(0, 0, 0, 0.06);
      --shadow-lg: 0 10px 15px rgba(0, 0, 0, 0.1), 0 4px 6px rgba(0, 0, 0, 0.05);
      --shadow-xl: 0 20px 25px rgba(0, 0, 0, 0.1), 0 10px 10px rgba(0, 0, 0, 0.04);
      --gradient-primary: linear-gradient(135deg, #fe424d 0%, #ff6b6b 100%);
      --gradient-bg: linear-gradient(135deg, #f8fafc 0%, #ffffff 100%);
    }

    * { margin: 0; padding: 0; box-sizing: border-box; }
    body { font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif; background: var(--gradient-bg); color: var(--text-dark); line-height: 1.6; }
    .container-custom { max-width: 1200px; margin: 0 auto; padding: 0 1rem; }

    /* Hero Section */
    .hero-section { background: var(--white); border-radius: 24px; margin: 2rem 0; overflow: hidden; box-shadow: var(--shadow-lg); }
    .hero-header { background: var(--gradient-primary); padding: 2rem; color: var(--white); position: relative; }
    .hero-header::before { content: ''; position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(255,255,255,0.05)" stroke-width="0.5"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>'); }
    .hero-title { font-size: 2.5rem; font-weight: 800; margin-bottom: 1rem; position: relative; z-index: 2; }
    .action-bar { display: flex; gap: 1rem; flex-wrap: wrap; position: relative; z-index: 2; }
    .btn-modern { padding: 0.75rem 1.5rem; border-radius: 50px; font-weight: 600; text-decoration: none; display: inline-flex; align-items: center; gap: 0.5rem; transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1); border: none; cursor: pointer; }
    .btn-white { background: var(--white); color: var(--primary-color); box-shadow: var(--shadow-sm); }
    .btn-white:hover { transform: translateY(-2px); box-shadow: var(--shadow-md); color: var(--primary-dark); }
    .btn-outline { background: transparent; color: var(--white); border: 2px solid rgba(255, 255, 255, 0.3); }
    .btn-outline:hover { background: var(--white); color: var(--primary-color); border-color: var(--white); }
    .btn-danger { background: rgba(220, 53, 69, 0.1); color: #dc3545; border: 2px solid rgba(220, 53, 69, 0.2); }
    .btn-danger:hover { background: #dc3545; color: var(--white); border-color: #dc3545; }

    /* Image Section */
    .image-section { position: relative; margin: 2rem 0; }
    .main-image { width: 100%; height: 500px; object-fit: cover; border-radius: 24px; box-shadow: var(--shadow-xl); transition: transform 0.5s ease; }
    .main-image:hover { transform: scale(1.02); }

    /* Content Grid */
    .content-grid { display: grid; grid-template-columns: 2fr 1fr; gap: 2rem; margin: 2rem 0; }
    .main-content, .sidebar { background: var(--white); border-radius: 24px; padding: 2rem; box-shadow: var(--shadow-md); }
    .sidebar { height: fit-content; }

    /* Details Cards */
    .detail-grid { display: grid; gap: 1.5rem; margin-bottom: 2rem; }
    .detail-card { background: var(--bg-light); border-radius: 16px; padding: 1.5rem; transition: all 0.3s ease; border-left: 4px solid var(--primary-color); }
    .detail-card:hover { transform: translateX(4px); box-shadow: var(--shadow-sm); }
    .detail-header { display: flex; align-items: center; gap: 1rem; margin-bottom: 0.5rem; }
    .detail-icon { width: 40px; height: 40px; background: var(--primary-light); border-radius: 12px; display: flex; align-items: center; justify-content: center; color: var(--primary-color); font-size: 1.2rem; }
    .detail-label { font-weight: 700; color: var(--text-dark); font-size: 0.9rem; text-transform: uppercase; letter-spacing: 0.5px; }
    .detail-value { font-size: 1.1rem; color: var(--text-dark); font-weight: 600; }
    .price-highlight { font-size: 1.5rem; color: var(--primary-color); font-weight: 800; }

    /* Booking Section */
    .booking-section { background: var(--gradient-primary); color: var(--white); border-radius: 20px; padding: 2rem; margin-bottom: 2rem; }
    .booking-title { font-size: 1.5rem; font-weight: 700; margin-bottom: 1.5rem; text-align: center; }
    .booking-form { display: grid; gap: 1rem; }
    .form-group { display: flex; flex-direction: column; gap: 0.5rem; }
    .form-label { font-weight: 600; font-size: 0.9rem; text-transform: uppercase; letter-spacing: 0.5px; }
    .form-input { padding: 0.75rem; border: none; border-radius: 12px; font-size: 1rem; background: var(--white); color: var(--text-dark); transition: all 0.3s ease; }
    .form-input:focus { outline: none; box-shadow: 0 0 0 3px rgba(255, 255, 255, 0.3); transform: translateY(-1px); }
    .btn-book { background: var(--white); color: var(--primary-color); padding: 1rem; border: none; border-radius: 12px; font-weight: 700; font-size: 1.1rem; margin-top: 1rem; transition: all 0.3s ease; cursor: pointer; }
    .btn-book:hover { transform: translateY(-2px); box-shadow: var(--shadow-lg); }

    /* Map Section */
    .map-section { background: var(--white); border-radius: 24px; padding: 2rem; margin: 2rem 0; box-shadow: var(--shadow-md); }
    .map-header { display: flex; align-items: center; justify-content: space-between; margin-bottom: 1.5rem; }
    .map-title { font-size: 1.5rem; font-weight: 700; color: var(--text-dark); }
    .btn-map { background: var(--gradient-primary); color: var(--white); padding: 0.75rem 1.5rem; border: none; border-radius: 50px; font-weight: 600; transition: all 0.3s ease; cursor: pointer; }
    .btn-map:hover { transform: translateY(-2px); box-shadow: var(--shadow-md); }
    #map { height: 400px; width: 100%; border-radius: 16px; overflow: hidden; box-shadow: var(--shadow-sm); }

    /* Reviews Section */
    .reviews-section { background: var(--white); border-radius: 24px; padding: 2rem; margin: 2rem 0; box-shadow: var(--shadow-md); }
    .section-header { text-align: center; margin-bottom: 2rem; }
    .section-title { font-size: 2rem; font-weight: 800; color: var(--text-dark); margin-bottom: 0.5rem; }
    .section-subtitle { color: var(--text-light); font-size: 1.1rem; }
    .review-form-container { background: var(--bg-light); border-radius: 20px; padding: 2rem; margin-bottom: 2rem; }
    .star-rating { display: flex; gap: 0.5rem; margin: 1rem 0; justify-content: center; }
    .star-rating i { font-size: 2rem; color: #e5e7eb; cursor: pointer; transition: all 0.2s ease; }
    .star-rating i.active { color: var(--primary-color); transform: scale(1.1); }
    .review-textarea { width: 100%; min-height: 120px; padding: 1rem; border: 2px solid #e5e7eb; border-radius: 16px; resize: vertical; font-size: 1rem; transition: all 0.3s ease; }
    .review-textarea:focus { outline: none; border-color: var(--primary-color); box-shadow: 0 0 0 3px var(--primary-light); }
    .btn-submit { background: var(--gradient-primary); color: var(--white); padding: 1rem 2rem; border: none; border-radius: 50px; font-weight: 700; font-size: 1.1rem; cursor: pointer; transition: all 0.3s ease; display: block; margin: 1.5rem auto 0; }
    .btn-submit:hover { transform: translateY(-2px); box-shadow: var(--shadow-lg); }

    /* Review Cards */
    .reviews-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 1.5rem; margin-top: 2rem; }
    .review-card { background: var(--bg-light); border-radius: 20px; padding: 1.5rem; position: relative; transition: all 0.3s ease; border-left: 4px solid var(--primary-color); }
    .review-card:hover { transform: translateY(-4px); box-shadow: var(--shadow-md); }
    .reviewer-info { display: flex; align-items: center; gap: 1rem; margin-bottom: 1rem; }
    .reviewer-avatar { width: 40px; height: 40px; background: var(--gradient-primary); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: var(--white); font-weight: 700; text-transform: uppercase; }
    .reviewer-name { font-weight: 700; color: var(--text-dark); }
    .review-rating { display: flex; gap: 0.25rem; margin: 0.5rem 0; }
    .review-rating i { font-size: 1rem; }
    .review-comment { color: var(--text-light); line-height: 1.6; margin-bottom: 1rem; }
    .delete-btn { position: absolute; top: 1rem; right: 1rem; background: rgba(220, 53, 69, 0.1); border: none; border-radius: 50%; width: 32px; height: 32px; display: flex; align-items: center; justify-content: center; color: #dc3545; cursor: pointer; transition: all 0.3s ease; }
    .delete-btn:hover { background: #dc3545; color: var(--white); }

    /* Prompts */
    .login-prompt, .no-reviews { text-align: center; padding: 1rem; color: var(--text-light); }
    .login-prompt i, .no-reviews i { font-size: 2rem; color: var(--primary-color); margin-bottom: 1.5rem; }

    /* Responsive */
    @media (max-width: 1024px) { .content-grid { grid-template-columns: 1fr; } .sidebar { order: -1; } }
    @media (max-width: 768px) { .hero-title { font-size: 2rem; } .action-bar { flex-direction: column; } .main-image { height: 300px; } .main-content, .sidebar { padding: 1.5rem; } .reviews-grid { grid-template-columns: 1fr; } }
  </style>
</head>

<body>
  <%- include("../includes/navbar.ejs") %>

  <div class="container-custom">
    <%- include("../includes/flash.ejs") %>
    
    <div class="hero-section">
      <div class="hero-header">
        <h1 class="hero-title"><%= listing.title %></h1>
        <div class="action-bar">
          <a href="/listings" class="btn-modern btn-white">
            <i class="fa-solid fa-arrow-left"></i> Back to Listings
          </a>
          <% if (currentUser && listing.owner._id.equals(currentUser._id)) { %>
            <a href="/listings/<%= listing._id %>/edit" class="btn-modern btn-outline">
              <i class="fa-solid fa-pen-to-square"></i> Edit Listing
            </a>
            <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" class="d-inline">
              <button type="submit" class="btn-modern btn-danger">
                <i class="fa-solid fa-trash"></i> Delete
              </button>
            </form>
          <% } %>
        </div>
      </div>
    </div>

    <div class="image-section">
      <img src="<%= listing.image.url %>" alt="Listing Image" class="main-image">
    </div>

    <div class="content-grid">
      <div class="main-content">
        <div class="detail-grid">
          <div class="detail-card">
            <div class="detail-header">
              <div class="detail-icon"><i class="fa-solid fa-user"></i></div>
              <div>
                <div class="detail-label">Hosted By</div>
                <div class="detail-value">
                  <% if (listing.owner) { %>
                    <%= listing.owner.username %>
                  <% } else { %>
                    Unknown
                  <% } %>
                </div>
              </div>
            </div>
          </div>
          <div class="detail-card">
            <div class="detail-header">
              <div class="detail-icon"><i class="fa-solid fa-align-left"></i></div>
              <div>
                <div class="detail-label">Description</div>
                <div class="detail-value"><%= listing.description %></div>
              </div>
            </div>
          </div>
          <div class="detail-card">
            <div class="detail-header">
              <div class="detail-icon"><i class="fa-solid fa-location-dot"></i></div>
              <div>
                <div class="detail-label">Location</div>
                <div class="detail-value"><%= listing.location %></div>
              </div>
            </div>
          </div>
          <div class="detail-card">
            <div class="detail-header">
              <div class="detail-icon"><i class="fa-solid fa-flag"></i></div>
              <div>
                <div class="detail-label">Country</div>
                <div class="detail-value"><%= listing.country %></div>
              </div>
            </div>
          </div>
          <div class="detail-card">
            <div class="detail-header">
              <div class="detail-icon"><i class="fa-solid fa-layer-group"></i></div>
              <div>
                <div class="detail-label">Category</div>
                <div class="detail-value text-capitalize"><%= listing.category %></div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="sidebar">
        <div class="detail-card">
          <div class="detail-header">
            <div class="detail-icon"><i class="fa-solid fa-rupee-sign"></i></div>
            <div>
              <div class="detail-label">Price per Night</div>
              <div class="detail-value price-highlight">₹ <%= listing.price ? listing.price.toLocaleString("en-IN") : 'Not Available' %></div>
            </div>
          </div>
        </div>
        <br>
        <div class="booking-section">
            <h3 class="booking-title">Reserve Your Stay</h3>

            <form id="booking-form" action="/bookings/details" method="GET" class="booking-form needs-validation" novalidate>
              <input type="hidden" name="listingId" value="<%= listing._id %>">
              
              <div class="form-group">
                <label class="form-label">Check In</label>
                <input type="text" id="checkIn" name="checkIn" class="form-input" required placeholder="Select Date">
              </div>
              
              <div class="form-group">
                <label class="form-label">Check Out</label>
                <input type="text" id="checkOut" name="checkOut" class="form-input" required placeholder="Select Date">
              </div>

              <div id="date-error" class="text-white text-center mt-2" style="font-weight: 600; min-height: 1.2rem;"></div>

              <button type="submit" class="btn-book">
                <i class="fa-solid fa-calendar-check"></i> Proceed to Book
              </button>
            </form>
          </div>
      </div>
    </div>

    <div class="map-section">
      <div class="map-header">
        <h3 class="map-title">Explore the Area</h3>
        <button id="loadMapBtn" class="btn-map">
          <i class="fa-solid fa-map-location-dot"></i> View Map
        </button>
      </div>
      <div id="map" style="display:none;"></div>
    </div>

    <div class="reviews-section">
      <div class="section-header">
        <h2 class="section-title">Guest Reviews</h2>
        <p class="section-subtitle">See what others have to say</p>
      </div>

      <% if (currentUser) { %>
        <div class="review-form-container">
          <form action="/listings/<%= listing._id %>/reviews" method="POST" class="needs-validation" novalidate>
            <div class="form-group text-center">
              <label class="form-label">Your Rating</label>
              <div class="star-rating">
                <i class="fa-solid fa-star" data-value="1"></i>
                <i class="fa-solid fa-star" data-value="2"></i>
                <i class="fa-solid fa-star" data-value="3"></i>
                <i class="fa-solid fa-star" data-value="4"></i>
                <i class="fa-solid fa-star" data-value="5"></i>
              </div>
              <input type="hidden" name="review[rating]" id="ratingValue" value="1" required>
            </div>
            <div class="form-group">
              <label class="form-label">Your Review</label>
              <textarea id="comment" name="review[comment]" class="review-textarea" placeholder="Tell others about your experience..." required></textarea>
            </div>
            <button type="submit" class="btn-submit">
              <i class="fa-solid fa-paper-plane"></i> Submit Review
            </button>
          </form>
        </div>
      <% } else { %>
        <div class="login-prompt">
          <i class="fa-solid fa-lock"></i>
          <p>You must be logged in to leave a review.</p>
          <br>
          <a href="/login" class="btn-submit" style="text-decoration: none; display: inline; margin: 0; width: 150px; height: 150px;">
            </i>Login
          </a>
        </div>
      <% } %>

      <hr style="margin: 3rem 0;">

      <% if (listing.reviews.length === 0) { %>
        <div class="no-reviews">
          <i class="fa-regular fa-comments"></i>
          <p>No reviews yet. Be the first to share your experience!</p>
        </div>
      <% } else { %>
        <div class="reviews-grid">
          <% listing.reviews.forEach(review => { %>
            <div class="review-card">
              <div class="reviewer-info">
                <% if (review.author && review.author.username) { %>
                  <div class="reviewer-avatar"><%= review.author.username.charAt(0) %></div>
                  <div class="reviewer-name"><%= review.author.username %></div>
                <% } else { %>
                  <div class="reviewer-avatar"><i class="fa-solid fa-user-secret"></i></div>
                  <div class="reviewer-name"><em>Anonymous</em></div>
                <% } %>
              </div>
              <div class="review-rating">
                <% for (let i = 1; i <= 5; i++) { %>
                  <i class="<%= i <= review.rating ? 'fa-solid fa-star' : 'fa-regular fa-star' %>" style="color: var(--primary-color);"></i>
                <% } %>
              </div>
              <p class="review-comment">"<%= review.comment %>"</p>

              <% if (currentUser && review.author && review.author.equals(currentUser._id)) { %>
                <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                  <button type="submit" class="delete-btn" title="Delete Review">
                    <i class="fa-solid fa-trash"></i>
                  </button>
                </form>
              <% } %>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>
  </div>

