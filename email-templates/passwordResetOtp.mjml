<mjml>
  <mj-head>
    <mj-preview>Your Stayzio password reset OTP</mj-preview>
    <mj-style inline="inline">
      .otp-box {
        background: linear-gradient(135deg, #fe424d 0%, #ff6b73 100%);
        color: #ffffff;
        font-size: 24px;
        font-weight: bold;
        letter-spacing: 4px;
        padding: 16px 24px;
        border-radius: 12px;
        display: inline-block;
        box-shadow: 0 4px 15px rgba(254, 66, 77, 0.3);
        border: 2px solid rgba(254, 66, 77, 0.1);
      }
      .security-alert {
        background-color: #fff5f5;
        border-left: 4px solid #fe424d;
        padding: 15px;
        border-radius: 6px;
        margin: 15px 0;
      }
      .brand-accent {
        color: #fe424d;
      }
      .warning-text {
        color: #d97706;
        font-weight: 600;
      }
    </mj-style>
  </mj-head>
  <mj-body background-color="#fafafa">
    <!-- Header Section -->
    <mj-section background-color="#ffffff" padding="30px 20px 20px 20px" border-radius="12px 12px 0 0">
      <mj-column>
        <mj-text align="center" font-size="28px" font-weight="bold" color="#fe424d" padding="0 0 10px 0">
          🌏︎Stayzio
        </mj-text>
        <mj-text align="center" font-size="26px" font-weight="bold" color="#333" padding="0 0 15px 0">
          Password Reset Request 🔒
        </mj-text>
        <mj-divider border-width="2px" border-color="#fe424d" width="60px" />
      </mj-column>
    </mj-section>

    <!-- Main Content Section -->
    <mj-section background-color="#ffffff" padding="20px">
      <mj-column>
        <mj-text font-size="18px" color="#333" padding="0 0 15px 0">
          Hi <strong class="brand-accent">{{username}}</strong>,
        </mj-text>
        <mj-text font-size="16px" color="#555" line-height="1.6" padding="0 0 15px 0">
          We received a request to reset the password for your Stayzio account. If this was you, please use the verification code below to continue with your password reset:
        </mj-text>
        
        <!-- OTP Box -->
        <mj-text align="center" padding="20px 0 25px 0">
          <span class="otp-box">{{otp}}</span>
        </mj-text>
        
        <!-- Security Alert Box -->
        <mj-text font-size="14px" color="#555" padding="0 0 20px 0">
          <div class="security-alert">
            <strong style="color: #fe424d;">⚠️ Security Notice:</strong><br/>
            • This code expires in <span class="warning-text">10 minutes</span><br/>
            • Only use this code if you requested a password reset<br/>
            • Never share this code with anyone
          </div>
        </mj-text>
        
        <mj-text font-size="15px" color="#d97706" line-height="1.6" padding="0 0 15px 0" font-weight="600">
          <strong>🚨 Didn't request this?</strong><br/>
          If you did not request a password reset, please ignore this email and consider changing your password immediately for security.
        </mj-text>
      </mj:column>
    </mj-section>

    <!-- Security Tips Section -->
    <mj-section background-color="#f8fafc" padding="20px" border-top="1px solid #e2e8f0">
      <mj-column>
        <mj-text align="center" font-size="16px" color="#333" padding="0 0 15px 0" font-weight="600">
          🛡️ Account Security Tips
        </mj-text>
        <mj-text font-size="14px" color="#64748b" line-height="1.6" padding="0 0 15px 0">
          • Never share your login credentials with anyone<br/>
          • Use a strong, unique password for your Stayzio account<br/>
          • Log out from shared or public devices
        </mj-text>
        <mj-button background-color="#fe424d" color="#ffffff" border-radius="25px" font-size="14px" font-weight="bold" padding="12px 30px" href="mailto:piyushpraja1336@gmail.com">
          Report Security Issue
        </mj-button>
      </mj-column>
    </mj-section>

    <!-- Footer Section -->
    <mj-section background-color="transparent" padding="25px 20px 20px 20px">
      <mj-column>
        <mj-divider border-width="1px" border-color="#e0e0e0" width="100%" />
        <mj-text align="center" font-size="12px" color="#999" padding="15px 0 5px 0">
          © {{year}} <span class="brand-accent"><strong>🌏︎Stayzio</strong></span>. All rights reserved.
        </mj-text>
        <mj-text align="center" font-size="11px" color="#bbb" line-height="1.4">
          This email was sent for account security. If you have concerns, please contact our security team.
        </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>