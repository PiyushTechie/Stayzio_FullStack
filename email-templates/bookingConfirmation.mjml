<mjml>
  <mj-head>
    <mj-preview>Your Stayzio booking is confirmed! Get ready for your amazing stay.</mj-preview>
    <mj-style inline="inline">
      .confirmation-badge {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        color: #ffffff;
        padding: 12px 24px;
        border-radius: 25px;
        font-weight: bold;
        display: inline-block;
        box-shadow: 0 4px 15px rgba(16, 185, 129, 0.3);
      }
      .booking-card {
        background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
        border: 2px solid #fe424d;
        border-radius: 16px;
        padding: 25px;
        margin: 20px 0;
        box-shadow: 0 4px 20px rgba(254, 66, 77, 0.1);
      }
      .detail-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 12px 0;
        border-bottom: 1px solid #e5e7eb;
      }
      .detail-label {
        color: #6b7280;
        font-weight: 600;
        font-size: 14px;
      }
      .detail-value {
        color: #1f2937;
        font-weight: 700;
        font-size: 15px;
        text-align: right;
      }
      .brand-accent {
        color: #fe424d;
      }
      .celebration-section {
        background: linear-gradient(135deg, #fef3f2 0%, #fff5f5 100%);
        border-radius: 12px;
        padding: 20px;
        text-align: center;
        margin: 20px 0;
      }
      .action-button {
        background: linear-gradient(135deg, #fe424d 0%, #ff6b73 100%);
        color: white;
        padding: 14px 28px;
        border-radius: 25px;
        text-decoration: none;
        font-weight: bold;
        display: inline-block;
        box-shadow: 0 4px 15px rgba(254, 66, 77, 0.3);
      }
    </mj-style>
  </mj-head>
